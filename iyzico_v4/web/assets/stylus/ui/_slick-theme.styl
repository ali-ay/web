.slick-dots
  list-style-type none
  text-align center
  padding 0

  & li
    display inline-block
    margin-left 3px
    margin-right 3px

  & button
    background-color #9b9b9b
    opacity 0.3
    border 0
    border-radius 10px
    text-indent -9999px
    width 10px
    height 10px
    outline 0
    padding 0


  & li.slick-active
    & button
      background-color #64acff
      opacity 1


.slick-slide
  outline 0

.slider
  display none

.slider.slick-initialized
   display: block
