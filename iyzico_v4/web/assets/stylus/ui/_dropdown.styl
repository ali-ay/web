.iyzi-dropdown
  position relative
  width 100%
  height 30px
  background-color #515151
  color #b1b1b1
  padding-left 10px
  padding-right 10px
  line-height 30px
  font-size 14px
  cursor pointer

  & .fa
    font-size 14px
    color $white
    float right
    line-height 30px

  &__list
    display none
    position absolute
    margin-top 1px
    left 0
    z-index 1
    width 100%
    margin 0
    padding 0

    & li
      width 100%!important
      padding-right 0!important
      & a
        width 100%
        display block
        height 30px
        padding-left 10px
        padding-right 10px
        line-height 30px
        font-size 14px
        background-color #515151

        &:hover
          opacity 0.7
