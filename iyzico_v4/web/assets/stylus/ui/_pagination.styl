.iyzi-pagination
  position relative
  width 100%
  margin 0
  padding 0
  list-style-type none
  text-align center

  & li
    display inline-block
    padding-left 20px
    padding-right 20px

    & a
      width 50px
      height 50px
      line-height 50px
      text-align center
      display block
      font-size 18px
      color #4ebcd1
      letter-spacing 2px
      font-weight bold

      &:hover
        border-radius 100px
        background-color rgba(255, 255, 255, 0.8)
        box-shadow 0 5px 10px 0 rgba(0, 0, 0, 0.05)
        border solid 1px rgba(48, 48, 48, 0.1)
        text-decoration none


  & li.active
    & a
      border-radius 100px
      background-color rgba(255, 255, 255, 0.8)
      box-shadow 0 5px 10px 0 rgba(0, 0, 0, 0.05)
      border solid 1px rgba(48, 48, 48, 0.1)
