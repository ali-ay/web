input[type="search"]
  box-sizing border-box

textarea
  resize none

.file-upload
  position absolute
  top 0
  right 0
  margin-top 10px
  margin-right 20px
  width 25px
  height 26px
  cursor pointer

.input-file
  width 25px
  height 26px
  position absolute
  z-index 2
  cursor pointer
  top 0
  left 0
  right 0
  margin-left auto
  margin-right auto
  opacity 0

.file-input-button
  background-color transparent
  border 0
  position absolute
  z-index 1
  top 0
  left 0
  right 0
  outline 0
  margin-left auto
  margin-right auto
  font normal normal normal 14px/1 FontAwesome

  &:before
    position absolute
    z-index 1
    content "\f093"
    color #6c6c6c
    font-size 18px

.textarea
  width 100%
  min-height 120px
  display block
  padding 15px 20px
  font-size 14px
  color #313131
  border 1px solid #ebecee
  background-color $white
  border-radius 5px
  outline 0
  placeholder(#989898)

  &:focus
    placeholder(#fff)


.input-form
  display block
  width 100%
  border 0
  outline 0
  padding 15px 20px
  font-size 14px
  color #989898
  placeholder(#989898)
  border-radius 5px
  border 1px solid #ebecee
  background-color $white
  outline none
  -webkit-appearance none
  -moz-appearance none

.input
  display block
  width 100%
  border 0
  outline 0
  padding 10px 15px
  font-size 12px
  background-color #ffffff;
  border solid 1px rgba(222, 222, 222, 0.8)
  placeholder(#4d4d4d)

  &--default
    padding 15px 20px
    font-size 14px
    color #313131
    border 1px solid #ebecee
    background-color $white
    border-radius 5px

    &:focus
      placeholder(#fff)

  &--comment
    height 36px
    background-color $white

    &:focus
      height auto
