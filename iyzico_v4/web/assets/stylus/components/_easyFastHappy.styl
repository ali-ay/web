.easyFastHappy.events
  padding 0 0 40px 0

  @media (max-width 640px)
    padding 50px 0 0 0

.easyFastHappy
  display flex
  padding 100px 0 80px 0

  @media (max-width 768px)
    padding 80px 0 50px 0

  @media (max-width 640px)
    padding 50px 0 0 0

  .container
    display flex
    align-items center
    flex-direction column

    .title
      font-size 48px
      line-height normal
      color #202020
      font-weight bold
      padding-bottom 10px

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px
        padding 0 15px 10px 15px


    p
      font-size 18px
      line-height 1.67
      color #848484
      max-width 970px
      padding 0
      text-align center

      @media (max-width 768px)
        font-size 14px

      @media (max-width 640px)
        font-size 12px
        padding 0 15px

    ul
      list-style none
      margin 0
      padding 20px 0 0 0
      display flex
      flex-direction row

      @media (max-width 640px)
        flex-direction column

      li
        margin 15px
        display flex
        flex-direction column
        flex 1
        max-width 370px

        img
          width 100%

        .subTitle
          font-size 42px
          font-weight 500
          color #202020
          line-height normal
          padding-top 30px

          @media (max-width 768px)
            font-size 24px

          @media (max-width 640px)
            font-size 20px

        p
          text-align left
  iframe
    width 100%
    height 676px
    margin 60px 0

    @media (max-width 768px)
      height 400px

    @media (max-width 640px)
      height 320px
      margin 30px 0

.events
  .container
    ul
      li
        max-width 570px
        position relative

        @media (max-width 640px)
          height 310px

        iframe
          height 312px
