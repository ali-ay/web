.pressHeaderContent

  .container
    display flex
    flex-direction column
    align-items center

    @media (max-width 640px)
      padding-top 0

    h1
      display flex
      flex-direction column
      justify-content center
      align-items center
      padding 60px 0 40px 0

      @media (max-width 768px)
        padding 30px 0

      strong
        font-weight bold

      @media (max-width 768px)
        text-align center

      @media (max-width 640px)
        font-size 24px
        line-height 29px
        padding 20px 0 15px 0

    .title
      font-size 42px
      font-weight bold
      line-height normal
      color #202020
      padding 100px 0 30px 0

      @media (max-width 768px)
        padding 80px 0 15px 0
        font-size 38px

      @media (max-width 640px)
        padding 50px 0 15px 0
        font-size 24px

    a
      margin-top 60px

      @media (max-width 640px)
        margin-top 20px

    .description
      font-size 18px
      line-height 1.67
      color #848484
      text-align center
      max-width 970px

      @media (max-width 768px)
        padding 15px 20px

      @media (max-width 640px)
        font-size 12px
        padding 5px 20px

    p
      font-size 18px
      line-height 1.67
      color #848484
      text-align center
      max-width 970px
      padding-bottom 30px

      @media (max-width 768px)
        padding 0 20px

      @media (max-width 640px)
        font-size 12px
        padding 5px 20px

      span
        color $clear-blue

        a
          text-decoration none
          color $clear-blue

    ul
      list-style none
      padding 30px 0
      margin -10px 0
      display flex
      align-items flex-start
      flex-direction column

      p
        font-size 24px
        line height 29px
        font-weight bold
        color #202020
        text-align left

      li
        font-size 18px
        line-height 1.67
        color #848484
        font-weight normal
        display flex

        &:before
          content "â€¢"
          padding 0 15px 0 10px

    .jobJoinUsButton
      font-size 24px
      font-weight bold
      line-height 29px

  .nGProgram
    background-color #fff
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    max-width 940px
    margin 60px 15px 0 15px
    padding 40px
    border-radius 10px
    box-shadow 0 10px 25px 0 rgba(0, 0, 0, 0.1)

    @media (max-width 640px)
      margin 0 15px

    h1
      padding 10px 0 0 0

    .buttonGroup
      margin 0

    .button
      font-weight bold


.careerDetail
  padding-bottom 100px

  .container

    a
      margin 0
      padding 30px 0
