.etsyIntegration

  .container

    .content

      ul
        list-style none
        padding 60px 0

        @media (max-width 768px)
          padding 20px 0 0 0
          margin 0

        @media (max-width 640px)
          padding 0

        li
          font-size 18px
          line-height 1.67
          display inline-flex
          align-items center

          @media (max-width 768px)
            font-size 14px

          @media (max-width 640px)
            font-size 12px

          span
            font-size 28px
            color $clear-blue
            font-weight 500
            background-color #fff
            border 2px solid #e9e9e9
            border-radius 25px
            min-width 45px
            height 45px
            margin-right 15px
            display inline-flex
            align-items center
            justify-content center

            @media (max-width 640px)
              font-size 18px
              font-weight 500
              min-width 25px
              height 25px

        .pL-60
          padding-left 60px

      .widgetSubTitle
        padding 0

        ul
          padding 60px 0
