.goodToGood
  .base-main
    padding-top 0

  .base-header
    position relative

  .newHeaderComponent
    background-image: url('../images/content/iyiden-iyiye-hero-bg.png');

    .iyzi-container
      max-width 970px

      .content
        max-width 100%

        img
          max-width 170px
          margin-bottom 16px

          @media (max-width 767px)
            margin 48px 0

        h1
          @media (max-width 767px)
            margin-top 16px

    .container
      padding 0

      .content
        max-width 770px

        h1
          @media (max-width 767px)
            height 246px
            display flex
            align-items center
            justify-content center
            padding-top 50px

        p
          @media (max-width 767px)
            padding-top 50px

  .newWhoIsiyzico
    background-color $gray-200
    padding 88px 0 48px 0

    .container
      .header
        .headerTop
          p
            display flex
            flex-direction column

            i
              font-style normal
              color $clear-blue

  .iyziRegister
    position relative

    .container

      .pale-blue
        font-size 48px
        color #ffffff !important

        @media (max-width 767px)
          font-size 34px
          font-weight bold

      .desc
        font-size 24px
        color $gray-100
        line-height normal

        @media (max-width 767px)
          font-size 16px
          line-height 1.56

      .downloadBtn
        .basic
          border 1px solid #ffffff
          color #ffffff

          &:hover
            background-color #ffffff
            color $clear-blue

      .gTg-arrow
        position absolute
        left 0
        top 140px
        overflow hidden
        height auto
        width 100%
        display flex
        max-width 182px
        justify-content flex-end

        @media (max-width 1348px)
          display none

  .clear-blue-bg
    margin-top 120px

    @media(max-width 767px)
      margin-top 72px

  .dark-indigo-bg
    padding 112px 0

    @media (max-width 767px)
      padding 40px 0

    .container
      h2
        padding-bottom 16px
        word-wrap break-word

      .gTg-arrow
        top 56px

  .iyzicoSss
    padding 120px 0

    @media(max-width 960px)
      padding 96px 0

    @media(max-width 767px)
      padding 72px 0

    .sssWrap
      ul
        margin 0
