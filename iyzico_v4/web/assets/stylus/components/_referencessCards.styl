.businessReferencessCards

  .container
    display flex
    align-items center
    justify-content center
    flex-direction column

    @media (max-width 768px)
      padding 0

    .referencessWrap
      display flex
      flex-direction row
      padding 60px 0

      @media (max-width 640px)
        flex-direction column
        padding 30px 0

      .referencessBox
        display flex
        flex-direction column
        flex 1
        justify-content flex-start
        align-items center
        background-color #fff
        box-shadow 0 10px 25px 0 rgba(0, 0, 0, 0.1)
        margin 15px
        border-radius 10px
        max-width 570px

        .refBanner
          img
            padding 0 0 30px 0

            @media (max-width 640px)
              padding 20px 0

            width 100%

        img
          padding 30px 0

          @media (max-width 640px)
            padding 20px 0

        i
          margin 60px 0 20px 0

          @media (max-width 640px)
            margin 30px 0 10px 0

        p
          font-size 22px
          text-align center
          color #202020
          line-height 1.27
          font-weight 500
          padding 0 20px
          margin-bottom 50px

          @media (max-width 768px)
            font-size 16px

          @media (max-width 640px)
            font-size 14px

        .refName
          font-size 16px
          font-weight 300
          padding 30px 0 20px 0

          @media (max-width 768px)
            font-size 12px

          @media (max-width 640px)
            padding 15px 0
