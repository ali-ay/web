.ourInvestors

  .ourInvestorsHeader
    background-color #fafafa
    height 328px
    display flex
    flex-direction column
    align-items center
    padding-top 100px

    @media (max-width 768px)
      padding-top 65px
      height 260px

    @media (max-width 640px)
      padding-top 50px
      height 170px

    .title
      font-size 48px
      font-weight bold
      color #202020
      line-height normal

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px

    .description
      font-size 18px
      line-height 1.67
      color #848484
      text-align center
      max-width 970px
      padding 20px 0 40px 0

      @media (max-width 768px)
        padding 15px 20px
        font-size 14px

      @media (max-width 640px)
        font-size 12px
        padding 15px 20px

  .container
    display flex
    align-items center
    justify-content center
    flex-direction column
    margin-top -95px
    padding 0

    @media (max-width 768px)
      margin-top -100px

    @media (max-width 640px)
      margin-top -50px

    ul
      display flex
      list-style none
      flex-direction row
      padding 0
      margin 0
      width 100%
      justify-content center
      flex-wrap wrap

      li
        margin 15px
        background-color #fff
        position relative
        display flex
        justify-content center
        align-items center
        max-width 360px
        width 100%
        height 160px
        border-radius 10px
        box-shadow 0 10px 25px 0 rgba(0, 0, 0, 0.1)

        @media (max-width 1024px)
          max-width 290px

        @media (max-width 640px)
          width 100%
          height 90px
          margin 5px

        img
          height max-content
