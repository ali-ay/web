.newHeaderComponent
  display flex
  flex-direction column
  background-image url('../images/content/personal-hero-bg.png')
  background-repeat no-repeat
  background-size cover
  background-position right
  height 624px

  @media (max-width 1023px)
    height 100%
    background-size 100% 586px
    background-position top

  @media (max-width 767px)
    background-size 100% 230px

  .iyzi-container
    display flex
    align-self center
    height 624px

    @media (max-width 1023px)
      height 100%
      flex-direction column-reverse

    .content
      height 100%
      display flex
      flex-direction column
      justify-content center
      max-width 585px
      flex 1
      padding 0 15px 0 0

      @media (max-width 1023px)
        align-self center
        padding 32px 16px
        max-width none

      @media (max-width 767px)
        padding 16px 8px 40px 8px

      h1
        display flex
        flex-direction column
        font-size 58px
        line-height 80px

        @media (max-width 1023px)
          display inline

        @media (max-width 767px)
          font-size 34px
          line-height normal

        span
          font-weight bold
          color $clear-blue

      p
        font-size 24px
        line-height normal
        color $gray-900
        padding 16px 0 24px 0

        @media (max-width 767px)
          font-size 16px
          line-height 25px
          padding 8px 0 24px 0

      .sub
        font-weight bold
        font-size 24px
        padding-bottom 24px

        @media (max-width 767px)
          font-size 16px
          line-height 25px

      .buttonGroup
        margin 0

        .button
          min-width 270px
          display flex
          justify-content center
          max-height 56px

          @media (max-width 1023px)
            min-width 288px

          @media (max-width 767px)
            margin 0px auto

    .imgResp
      flex 1
      padding 0 0 0 15px
      display flex
      align-self flex-end

      @media (max-width 1023px)
        align-self center
        justify-content center
        padding 0
        width 100%

      img
        width 100%
        max-width 585px

        @media (max-width 1023px)
          max-width 586px

        @media (max-width 767px)
          max-width 230px
          max-height 230px
