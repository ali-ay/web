.iHLp
  .forBusiness
    .container
      .headerContent
        flex 2.4

        .buttonGroup
          a
            &:first-child
              margin 0 30px 0 0

              @media(max-width 768px)
                margin 0 0 15px 0

      .headerVideo
        flex 3
        padding-left 40px
        width 100%
        height 100%
        max-width 590px

        @media(max-width 768px)
          padding-left 15px

        video
          border-radius 10px
          box-shadow 0px 0px 14px -3px rgba(0,0,0,0.44)

  .iHDescTwo
    .container
      padding 50px 0 80px 0

      .buttonGroup
        margin 30px 0 0 0

        @media(max-width 768px)
          flex-direction column
          align-items center

        a
          &:first-child
            margin 0 30px 0 0

            @media(max-width 768px)
              margin 0 0 15px 0

  .iHMenuHidden
    display none !important

  .events
    padding 0

    .widgetTitle
      margin-top 25px


  .widget
    .container
      .video-responsive
        overflow hidden
        padding-bottom 56.25%
        position relative
        height 100%
        width 100%
        margin-top 100px

        @media(max-width 768px)
          margin-top 30px

        iframe
          left 0
          top 0
          height 100%
          width 100%
          position absolute

  .otherVideo
    .container
        max-height 470px

      .video-responsive
        &:first-child
          margin-right 15px

          @media(max-width 768px)
            margin 0

        &:last-child
          margin-left 15px

          @media(max-width 768px)
            margin 0

        iframe
          max-height 338px


.videoWrap
  .container
    max-width 970px
