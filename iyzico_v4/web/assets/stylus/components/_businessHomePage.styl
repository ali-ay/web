.businessHomePage
  .privileges
    margin 100px 0
    padding 0

    @media (max-width 768px)
      margin 80px 0

    @media (max-width 640px)
      margin 50px 0

  .whyiyzico
    padding-bottom 35px

    @media (max-width 768px)
      padding-bottom 45px

    @media (max-width 640px)
      padding-bottom 45px

  .newHeaderComponent
    background-image url('../images/content/business-bg.png')

    .iyzi-container
      .content
        h1
          display flex

          span
            color $orange-pink

        .buttonGroup
          @media (max-width 767px)
            flex-direction column

          .primary
            @media (max-width 767px)
              padding 18px
              margin-bottom 16px
              width 100%

          .basic
            max-width 224px
            min-width auto
            padding 15px
            margin-left 24px

            @media (max-width 767px)
              margin 0 auto
              max-width 100%
              width 100%
              display flex
              justify-content flex-start

            i
              margin-right 16px
  .iyziLife
    padding-top 80px

    @media (max-width 767px)
      padding 56px 0

    ul
      li
        .itemContent
          .buttonGroup
            .button
              &:first-child
                margin-right 15px

          p
            @media (max-width 767px)
              padding 8px 0

  .iyzicoSss
    margin-top 120px

    @media (max-width 1199px)
      margin-top 80px

    @media (max-width 767px)
      margin-top 40px

  .iyziRegister
    .container
      .button
        color $clear-blue

.iyzi-site
  .modal.fade.in
    opacity 1
    background rgba(0, 0, 0, 0.5)
    z-index 9999999

    @media (max-width 768px)
      opacity 1
      background rgba(0, 0, 0, 0.5)
      overflow visible


.businessHomePage
  .iyziRegister
    margin-bottom 0


.business
  [data-target="for-business-submenu"]
    color $clear-blue

    &:hover
      color $clear-blue

    &:focus
      color $clear-blue

.personal
  [data-target="for-personal-submenu"]
    color $clear-blue

    &:hover
      color $clear-blue

    &:focus
      color $clear-blue
