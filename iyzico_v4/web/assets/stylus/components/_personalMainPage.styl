.personalMainPage
  .whyiyzico
    padding-bottom 35px

    @media (max-width 768px)
      padding-top 80px

    @media (max-width 640px)
      padding-top 50px

  .appWidget
    padding 60px 0 0px 0

    @media (max-width 768px)
      padding 60px 0 0 0

    @media (max-width 640px)
      padding 30px 0 0 0

    .contentImage
      @media (max-width 640px)
        margin 20px 0 0 0

  .personalMobileAppSliderWrap
    margin-top 80px

    @media(max-width 960px)
      padding 80px 0

    @media(max-width 960px)
      padding 56px 0

    h3
      font-size 40px
      max-width 1214px
      text-align left
      padding 0 48px
      margin-bottom 72px

      @media(max-width 960px)
        font-size 34px
        padding-bottom 56px

        @media(max-width 767px)
          font-size 24px
          padding 0 8px
          margin-bottom 32px

      .newBadge
        display flex
        font-size 20px
        margin 0 0 16px 0
        background-color #d3f9d8
        color #2f9e44
        align-content center
        justify-content center
        width 80px
        height 32px

        @media(max-width 767px)
          width 56px
          height 24px
          font-size 14px

