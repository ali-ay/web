.whoWeAreContent

  .container
    display flex
    align-items center
    justify-content center
    flex-direction column
    padding 60px 0 30px 0

    @media (max-width 768px)
      padding 30px 0

    @media (max-width 640px)
      padding 20px 0

    .title
      font-size 48px
      color #202020
      font-weight bold
      line-height 58px

      @media (max-width 640px)
        font-size 24px
        line-height 29px

    ul
      display flex
      list-style none
      flex-direction row
      padding 0
      margin 0
      width 100%
      justify-content center

      @media (max-width 640px)
        flex-direction column

      li
        padding 30px 15px
        font-size 18px
        color #848484
        line-height 1.67

        @media (max-width 768px)
          padding 0 15px
          font-size 14px

        @media (max-width 640px)
          padding 15px 20px
          font-size 12px

    .whoWeAreQuote
      display flex
      justify-content center
      flex-direction column
      align-items center
      text-align center
      padding 40px 0 70px 0
      color #202020

      @media (max-width 768px)
        padding 40px 0 50px 0

      @media (max-width 640px)
        padding 35px 0

      i
        margin-bottom 34px

        @media (max-width 640px)
          margin-bottom 17px

      p
        font-size 22px
        line-height 1.27
        font-weight 500
        max-width 770px
        padding-bottom 16px

        @media (max-width 640px)
          font-size 14px
          padding-bottom 20px

      span
        font-size 16px
        font-weight 300

.newWhoWeAreContent
  padding-top 0 !important
  li
    .title
      font-size 48px !important
      line-height 1.4 !important

      @media(max-width 767px)
        padding-bottom 0 !important

    ul
      flex-wrap wrap
      display flex
      flex-direction row !important

      @media(max-width 767px)
        padding 0


      li
        max-width 385px
        width 100%
        padding 0 15px !important

        @media(max-width 960px)
          max-width none
          padding 0 !important

        &:nth-child(odd)
          padding-left 0 !important

          @media(max-width 960px)
            padding 0 0 48px 0 !important

        &:nth-child(even)
          padding-right 0 !important

          @media(max-width 960px)
            padding 0 0 48px 0 !important

    a
      width 100%
      max-width 288px
      justify-content center
      margin-top 40px

      @media(max-width 767px)
        max-width none


  h4
    font-size 34px
    font-weight bold
    color $-gray-900
    padding 24px 0

    @media(max-width 767px)
      font-size 24px
      padding 24px 0 8px 0

