.explanation
  text-decoration none
  padding 16px 0 0 0

  .iyzi-container
    max-width 970px

    @media(max-width 767px)
      padding 0 8px

    .content
      p
        font-size 24px
        line-height normal
        color $gray-900

        @media(max-width 767px)
          font-size 16px
          line-height 1.56

        &.heroDesc
          font-size 16px
          line-height 25px
          color $gray-700
          text-align center

          @media(max-width 767px)
            text-align left

        &.title
          font-size 28px
          font-weight bold
          margin 80px 0 24px 0

          @media(max-width 767px)
            margin 56px 0 8px 0
            font-size 24px
            line-height normal
