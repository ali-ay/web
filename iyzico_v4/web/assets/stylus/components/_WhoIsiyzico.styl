.whoIsiyzico
  padding 100px 0
  font-size 18px
  line-height 1.67
  color #000
  background-color #fafafa

  @media (max-width 768px)
    padding 80px 0

  @media (max-width 640px)
    padding 50px 0

  .container
    display flex

    @media (max-width 768px)
      flex-direction column
      justify-content center
      align-items center

    .content
      display flex
      flex 1
      flex-direction column

      @media (max-width 768px)
        padding 0 20px

      .title
        font-size 42px
        line-height 51px
        font-weight 300
        padding-bottom 30px
        color #202020

        @media (max-width 768px)
          font-size 38px
          line-height 46px
          padding-bottom 20px

        @media (max-width 640px)
          font-size 22px
          line-height 27px
          padding-bottom 20px

        b
          font-weight bold

    .brands
      display flex
      flex 1
      flex-wrap wrap
      justify-content flex-end

      @media (max-width 768px)
        justify-content flex-start
        padding-top 20px

      @media (max-width 640px)
        width 300px

      a
        @media (max-width 640px)
          display flex
          padding 0 50px

      .buttonText
        align-items center
        margin-right -30px

        @media (max-width 1024px)
          padding 10px

        @media (max-width 640px)
          margin 25px 0 0 0
          display flex
          width 100%
          justify-content center


      .refBox
        border-radius 15px
        background-color #ffffff
        box-shadow 0 5px 15px 0 rgba(0, 0, 0, 0.1)
        width 185px
        height 90px
        margin 15px
        display flex
        justify-content center
        align-items center

        @media (max-width 640px)
          width 135px
          height 66px
          margin 5px

  .mT-40

    @media (max-width 640px)
      margin-top 15px !important

  .mT-5

    @media (max-width 640px)
      margin-left 15px !important
