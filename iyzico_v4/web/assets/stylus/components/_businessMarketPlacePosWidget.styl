.businessMarketPlacePosWidget
  display flex

  .container
    display flex
    flex-direction column
    align-items center
    max-width 970px

    @media (max-width 640px)
      padding 0 20px

    ul
      list-style none
      padding 0

      li
        font-size 18px
        color #848484
        font-family
        display flex
        padding 15px 0
        margin 0

        i
          display inline block
          min-width 28px
          margin 5px 10px 0 0


    .widgetTitle
      @media (max-width 640px)
        font-size 14px
        padding-top 50px

    .widgetSubTitle
      padding 5px 0 20px 0

      @media (max-width 640px)
        font-size 20px
        padding 5px 0 15px 0


    .contentImage
      display flex
      flex 1
      justify-content center
      align-items center

      @media (max-width 640px)
        padding-top 30px

  img
    width 100%

  .flex-1
    flex 1
