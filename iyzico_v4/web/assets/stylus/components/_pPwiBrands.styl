.pPwiBrands
  .newHeaderComponent
    height 380px
    background-color #f5f9ff
    overflow hidden
    background-image none
    justify-content flex-start
    margin-bottom 80px
    padding-top 70px

    @media(max-width 767px)
      height 219px
      margin-bottom 48px
      justify-content flex-start
      padding-top 24px

    .iyzi-container
      height auto

      .content
        max-width 100%
        padding 0
        align-items center

        h1
          text-align center
          margin-bottom 24px
          font-size 48px
          line-height 1.4
          margin-bottom 16px
          font-weight bold
          color $gray-900
          display block

          @media(max-width 767px)
            font-size 28px
            margin-bottom 16px
            display flex
            line-height normal

          span
            color $gray-900

        img
          max-width 370px
          margin-left -11px

          @media(max-width 767px)
            max-width 163px
            margin-left 4px

        p
          font-size 30px
          line-height 1.53
          font-weight 500
          margin -26px 0 0 -6px
          padding 0


          @media(max-width 767px)
            font-size 15.3px
            margin-top -13px
            margin-left 4px

  .iyziRegister
    margin-bottom 0

    .container
      h2
        color $gray-100
        padding-bottom 16px

      p
        color $gray-100

  .headerNotifications
    display none

  .howToWorkPwi
    width 272px
    height 48px
    background-color $clear-blue
    border-radius 8px 8px 0 0
    position fixed
    right 32px
    bottom 0
    z-index 999 !important
    display flex
    justify-content center
    align-items center

    @media (max-width 767px)
      width 100%
      top 0
      right 0
      bottom unset
      justify-content flex-start
      padding-left 10px
      border-radius 0

    a
      display flex
      justify-content center
      align-items center

  .base-header
    @media (max-width 767px)
      margin-top 48px


.newyear
  .iyzi-site
    .newHeaderComponent
      padding-top 0px
      background-color #fcc6ba
      align-items center
      padding 0 15px
      position relative

      @media(max-width 960px)
        height 310px

      .lottie
        display flex
        width 100%
        height 380px
        position absolute
        z-index 9
        max-width 1420px

        @media(max-width 767px)
          height 320px

        .dH
          display block !important

          @media(max-width 960px)
            display none !important

        .mH
          @media(max-width 767px)
            display none !important

        lottie-player
          @media(max-width 960px)
            width 100% !important

          @media(max-width 767px)
            width 100% !important
            height 120% !important

          @media(max-width 425px)
            height 110% !important

          @media(max-width 320px)
            height 100% !important

      .snowGradient
        width 100%
        height 25px
        background-image linear-gradient(rgba(255, 197, 197, 0), #fcc6ba)
        display inline-block
        position absolute
        bottom 0
        z-index 99

      .iyzi-container
        position relative
        background-color #fcc6ba
        padding-top 0
        background-image url(/assets/images/content/shoplist-valentinesday.png)
        background-size 480px
        background-repeat no-repeat
        background-position center right
        min-height 380px

        @media(max-width 960px)
          background-size 436px
          min-height 310px

        @media(max-width 767px)
          min-height 290px
          background-size 280px
          background-position top
          margin-top 20px

        .content
          align-items flex-start
          justify-content center
          width 100%

          @media(max-width 767px)
            justify-content flex-end
            width 100%


          h1
            text-align left
            font-size 38px
            display inline-block

            @media(max-width 1100px)
              max-width 340px

            @media(max-width 960px)
              font-size 34px

            @media(max-width 767px)
              font-size 22px
              margin-bottom 50px

            @media(max-width 360px)
              max-width 230px
              margin-bottom 16px

            br
              @media(max-width 767px)
                display none

          img
            max-width 300px

            @media(max-width 960px)
              max-width 180px

            @media(max-width 767px)
              max-width 135px
              margin-bottom 18px
