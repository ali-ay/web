.generalConditionsContent
  display flex

  .container
    display flex
    flex-direction row
    padding 0

    @media (max-width 768px)
      flex-direction column

    .dropdownMenu
      display none

      @media (max-width 768px)
        display block
        margin 0 15px

      .dropdown
        .btn-secondary
          @media(max-width 768px)
            white-space nowrap
            text-overflow ellipsis
            display block
            width 100%
            overflow hidden
            text-align left
            padding-right 40px

    .leftMenu
      display flex
      flex 1
      flex-direction column

      @media (max-width 768px)
        display none

      .title
        font-size 24px
        line-height 29px
        color $clear-blue
        font-weight bold
        padding-bottom 20px

        a
          color $clear-blue
          text-decoration none

          &:focus
            color $clear-blue
            text-decoration none

          &:visit
            color $clear-blue
            text-decoration none

          &:hover
            color $clear-blue
            text-decoration none

      ul
        list-style none
        padding 0 15px 30px 0

        li
          font-size 18px
          font-weight 500
          line-height 22px
          padding 10px 0 10px 10px

          a
            color #202020
            text-decoration none

            &:hover
              color $clear-blue
              text-decoration none

          &:hover
            font-weight bold
            color $clear-blue


          &:before
              content ""
              margin 0 7px 0 -10px
              border 2px solid #1e64ff
              border-radius 0 2px 2px 0
              display content
              height 100px

    .content
      display flex
      flex 3
      padding-top 5px

      @media(max-width 640px)
        display block
        max-width 100%

      ul
        display flex
        padding 0
        flex-direction column
        list-style none

        li
          padding 60px
          margin 15px
          background-color #fff
          box-shadow 0 10px 25px 0 rgba(0, 0, 0, 0.1)
          height auto
          background-image: url('../images/content/career-box-bg.svg')
          background-repeat no-repeat
          background-size 70px 210px
          background-position left top
          border-radius 10px

          @media (max-width 768px)
            padding 30px

          @media (max-width 640px)
            padding 20px

          .title
            font-size 24px
            line-height 29px
            color #202020
            font-weight bold
            padding-bottom 15px

          p
            font-size 18px
            line-height 1.67
            color #848484

            @media (max-width 768px)
              font-size 14px

            @media (max-width 640px)
              font-size 14px

.generalConditionsContent .container .leftMenu ul li.active
  & a
    font-weight bold
    color $clear-blue

  &:before
    content ""
    margin 0 7px 0 -10px
    border 2px solid #1e64ff
    border-radius 0 2px 2px 0
    display content
