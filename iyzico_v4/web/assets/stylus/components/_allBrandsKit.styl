.allBrandsKit
  display flex

  @media (max-width 767px)
    padding-top 48px

  .iyzi-container
    padding 0 15px

    @media (max-width 1023px)
      padding 0 48px

    @media (max-width 767px)
      padding 0 8px

    .content
      background-color $orange-pink
      border-radius 16px
      padding 40px
      display flex
      justify-content space-between
      align-items center
      width 100%

      @media (max-width 1023px)
        flex-wrap wrap

      @media (max-width 767px)
        padding 48px 16px
        font-size 28px

      h4
        color $gray-100
        font-size 40px
        font-weight bold
        line-height normal

        @media (max-width 1023px)
          padding-bottom 8px

      p
        color $gray-100
        font-size 28px
        font-weight 500
        line-height normal

        @media (max-width 1023px)
          margin-bottom 56px

        @media (max-width 767px)
          margin-bottom 64px

      .basic
        color $orange-pink
        border 1px solid $gray-100
        background-color $gray-100
        height max-content

        @media (max-width 767px)
          width 100%
          display flex
          justify-content center

        &:before
          content ""
          background-image: url('../images/icons/download-thick-bottom-orange.svg')
          margin 0 10px 0 -13px
          width 24px
          height 24px
          background-size contain

        &:hover
          background-color $orange-pink
          color $gray-100

          &:before
            content ""
            background-image: url('../images/icons/download-thick-bottom-white.svg')
            margin 0 10px 0 -13px
            width 24px
            height 24px
            background-size contain

        &:hover
          background-color $orange-pink
          color $gray-100
