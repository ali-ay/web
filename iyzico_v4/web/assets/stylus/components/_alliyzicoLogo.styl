.alliyzicoLogo
  display flex
  padding-top 80px

  @media (max-width 767px)
    padding-top 56px

  .iyzi-container
    display flex
    flex-direction column

    .header
      display flex
      justify-content space-between
      padding 0 15px

      @media (max-width 1023px)
        padding 0 48px 20px 48px

      @media (max-width 767px)
        padding 0 8px 4px 8px
        flex-wrap wrap

      h4
        font-size 40px
        font-weight bold
        color $gray-900
        line-height normal

        @media (max-width 767px)
          font-size 28px
          padding-bottom 16px

      .basic
        border-color #1c7ed6
        color $clear-blue

        @media (max-width 1023px)
          min-width 188px
          max-height 56px

        @media (max-width 767px)
          width 100%
          display flex
          justify-content center

        &:before
          content ""
          background-image: url('../images/icons/download-thick-bottom-blue.svg')
          margin 0 10px 0 -13px
          width 24px
          height 24px
          background-size contain

        &:hover
          border-color $clear-blue
          background-color $clear-blue
          color $gray-100

          &:before
            content ""
            background-image: url('../images/icons/download-thick-bottom-white.svg')
            margin 0 10px 0 -13px
            width 24px
            height 24px
            background-size contain

    .content
      p
        font-size 16px
        color $gray-600
        line-height 1.56
        padding 17px 15px 120px 15px

        @media (max-width 1023px)
          padding 17px 48px 120px 48px

        @media (max-width 767px)
          padding 16px 8px 80px 8px

      ul
        padding 0
        list-style none
        display flex
        flex-wrap wrap
        margin-bottom 80px

        @media (max-width 960px)
          padding 0 33px

        @media (max-width 767px)
          padding 0 8px
          margin-bottom 56px

        li
          display flex
          flex-direction column
          background-color $gray-200
          border-radius 16px
          width 100%
          max-width 370px
          padding 16px 24px
          margin 15px

          @media (max-width 1024px)
            max-width 310px

          @media (max-width 960px)
            max-width 324px
            margin 12px

          @media (max-width 767px)
            margin 16px 0
            max-width 100%

          .img
            border-radius 16px
            padding 64px 56px

            @media (max-width 1024px)
              padding 41px 33px

          p
            font-size 28px
            color $gray-900
            font-weight 500
            line-height normal
            padding 25px 0 0 0

            @media (max-width 767px)
              font-size 24px
              padding 16px 0 0 0

          span
            font-size 16px
            color $gray-600
            font-weight normal
            line-height 1.56
            padding 8px 0 0 0

          .button
            margin 24px 0 0 0
            border-color $clear-blue
            color $clear-blue

            @media (max-width 960px)
              width 256px
              display flex
              justify-content center

            &:before
              content ""
              background-image: url('../images/icons/download-thick-bottom-blue.svg')
              margin 0 10px 0 -13px
              width 24px
              height 24px
              background-size contain

            &:hover
              border-color $clear-blue
              background-color $clear-blue
              color $gray-100

              &:before
                content ""
                background-image: url('../images/icons/download-thick-bottom-white.svg')
                margin 0 10px 0 -13px
                width 24px
                height 24px
                background-size contain
