.generalConditionsHeader
  display flex
  padding-top 215px

  @media (max-width 768px)
    padding-top 200px

  @media (max-width 640px)
    padding-top 76px

  .container
    display flex
    flex-direction column
    align-items center

    .title
      font-size 48px
      line-height 58px
      font-weight bold
      color #202020

    .description
      font-size 18px
      line-height 1.67
      color #848484
      text-align center
      padding 50px 0
      max-width 970px

      @media (max-width 768px)
        font-size 14px
        padding 50px 20px

      @media (max-width 640px)
        padding 0 20px 30px 20px
