.otherJobsCareerContent
  display flex
  flex-direction column
  align-items center
  padding-bottom 100px

  .otherJobsHeader
    background-color #fafafa
    display flex
    flex-direction column
    align-items center
    padding-top 100px
    height 328px
    width 100%

    .title
      font-size 48px
      font-weight normal
      font-weight bold
      color #202020

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px

    .description
      font-size 18px
      line-height 1.67
      color #848484
      max-width 970px
      text-align center

      @media (max-width 768px)
        font-size 14px
        padding 20px

      @media (max-width 640px)
        font-size 12px

  .container
    margin-top -100px

    ul
      padding 0

  .button
    margin-top 25px
