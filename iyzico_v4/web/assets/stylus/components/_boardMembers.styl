.boardMembers

  .container
    display flex
    align-items center
    justify-content center
    flex-direction column

    .title
      font-size 48px
      font-weight bold
      color #202020
      line-height normal

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px
        line-height 29px
        padding-bottom 15px

    .description
      font-size 18px
      line-height 1.67
      color #848484
      text-align center
      max-width 970px

      @media (max-width 768px)
        font-size 14px
        padding 20px 0 15px 0

      @media (max-width 640px)
        font-size 12px

    ul
      display flex
      list-style none
      flex-direction row
      padding 40px 0 85px 0
      margin 0
      width 100%
      justify-content center
      flex-wrap wrap

      @media (max-width 768px)
        padding 0

      li
        margin 15px
        font-size 18px
        font-weight 600
        color #fff
        position relative
        border-radius 10px
        overflow hidden

        @media (max-width 640px)
          margin 10px 5px

        .boardMembersDescription
          background-image linear-gradient(to top, #333333, rgba(0, 0, 0, 0))
          position absolute
          top 262px
          width 100%
          height 88px
          padding 0 10px 0 13px
          display flex
          align-items center

          p
            color #fff

            &:before
              content ""
              margin 0 10px 0 -13px
              border-style solid
              border-width 3px 0 3px 3px
              border-radius 0 2px 2px 0
              border-image linear-gradient(176deg, #00ece1, #c0c5ff) 1
