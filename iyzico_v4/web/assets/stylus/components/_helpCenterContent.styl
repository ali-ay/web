.helpCenterContent
  padding 0 0 120px 0

  @media (max-width 1023px)
    padding 12px 0 80px 0

  @media (max-width 767px)
    padding 36px 0 48px 0

  .container
    @media (max-width 1023px)
      max-width 100%

    ul
      @media (max-width 1023px)
        flex-direction column
        padding 0 48px
        width 100%

      @media (max-width 767px)
        padding 0 8px
        width 100%

      li
        background-color #f8f9fa
        border-radius 16px
        box-shadow none
        background-image none
        padding 24px 32px 32px 32px

        @media (max-width 1023px)
          max-width 100%
          margin 15px 0

        @media (max-width 767px)
          margin 12px 0
          max-width 100%
          padding 24px

        .title
          font-size 40px
          font-weight normal
          padding-bottom 12px
          font-weight bold
          line-height normal

          @media (max-width 767px)
            font-size 24px

          a
            color $gray-900

            &:hover
              color $gray-900


        .subTitle
          font-size 18px
          line-height 22px
          font-weight bold
          padding 12px 0

          @media (max-width 767px)
            font-size 16px

          a
            color $gray-900
            text-decoration none

            &:focus
              color #202020
              text-decoration none

            &:visit
              color #202020
              text-decoration none

            &:hover
              color #202020
              text-decoration none

        .description
          font-size 14px
          line-height 19px

          @media (max-width 768px)
            padding-bottom 20px
