.iyziTestimonial

  .container
    display flex
    align-items center
    flex-direction column
    padding 0 15px

    ul
      list-style none
      padding 0
      margin 0
      display flex
      width 100%
      justify-content center
      background-color #fff
      box-shadow 0 10px 25px 0 rgba(0, 0, 0, 0.1)
      border-radius 10px

      @media (max-width 768px)
        flex-direction column
        align-items center

      li
        display flex
        flex 1
        flex-direction column
        align-items center
        text-align center
        justify-content center

        &:nth-child(1)
          padding 0 15px 0 0

        &:nth-child(2)
          padding 0 0 0 15px

        p
          font-size 22px
          text-align left
          color #202020
          line-height 1.27
          font-weight 500

        .corporate
          font-size 16px
          font-weight 300
