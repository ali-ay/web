.brandsBox
  .iyzi-container
    flex-direction column

    h3
      padding 0 15px
      font-size 28px
      line-height normal
      margin-bottom 32px
      width 100%

      @media(max-width 960px)
        padding 0 32px

      @media(max-width 767px)
        padding 0 8px
        font-size 24px
        margin-bottom 24px

    .brandsWrap
      display flex
      flex-direction column
      align-items center
      position relative
      margin-bottom 48px

      @media(max-width 767px)
        margin-bottom 24px

      .location
          position absolute
          left 0px
          top -60px

          @media(max-width 767px)
            top -80px

      .locationhref
          position absolute
          left 0px
          top -220px

          @media(max-width 767px)
            top -220px

      .ulCenter
        display flex
        justify-content flex-start
        width 100%
        flex-direction column

        @media(max-width 1200px)
          max-width 1000px

        @media(max-width 1000px)
          max-width 800px

        @media(max-width 945px)
          max-width 768px

        @media(max-width 767px)
          max-width 680px

        @media(max-width 680px)
          max-width 585px

        @media(max-width 584px)
          max-width 489px

        @media(max-width 488px)
          max-width 392px

        @media(max-width 391px)
          max-width 296px

        ul
          list-style none
          padding 0
          margin 0
          display flex
          flex-wrap wrap
          justify-content flex-start

          @media(max-width 960px)
            padding 0 28px

          @media(max-width 767px)
            padding 0 4px


          li
            width 170px
            display flex
            flex-direction column
            align-items center
            font-size 24px
            color $gray-600
            margin 0 15px 48px 15px
            line-height normal

            @media(max-width 960px)
              margin 0 4px 40px 4px

            @media(max-width 767px)
              width 88px
              margin 0 4px 24px 4px

            a
              display flex
              flex-direction column
              align-items center

              p
                width 170px
                text-align center
                white-space nowrap
                overflow hidden
                text-overflow ellipsis
                font-size 24px

                @media(max-width 767px)
                  font-size 14px
                  width 88px

              img
                margin 0 10px 16px 10px
                border-radius 16px
                border solid 1px #dee2e6
                width 150px

                @media(max-width 960px)
                  width 120px

                @media(max-width 767px)
                  width 72px
                  margin 0 10px 7px 10px


.brandCategory
  background-color #ffffff
  margin 32px 0 83px 14px
  overflow scroll

  @media(max-width 767px)
    margin 0px 0 48px 0

  .iyzi-container
    flex-direction column
    padding 0 8px
    overflow hidden
    position sticky

    @media(max-width 767px)
      padding 0
      overflow scroll

    .title
      font-size 28px
      font-weight bold
      line-height normal
      padding-bottom 32px

      @media(max-width 767px)
        font-size 24px
        padding 0 0 24px 16px


    ul
      padding 0
      margin 0
      list-style none
      display flex
      overflow scroll
      z-index 10

      &::-webkit-scrollbar-track
          -webkit-box-shadow: inset 0 0 6px rgba(216,216,216,0.3);
          border-radius 10px
          background-color #d8d8d8

      &::-webkit-scrollbar-thumb
          -webkit-box-shadow: inset 0 0 6px rgba(216,216,216,0.3);
          border-radius 10px
          background-color #d8d8d8

      .active
        a
          display flex

          .categoryImg

            .icon
              use
                fill $clear-blue

          p
            color $clear-blue

      li
        width 100%
        max-width 136px
        display flex
        flex-direction column
        align-items center
        margin 0 4px

        @media(max-width 767px)
          max-width 75px
          float left
          margin 0 4px

        &:first-child
          margin-left 0px

          @media(max-width 767px)
            margin-left 20px


        &:last-child
          @media(max-width 767px)
            margin-right 20px

        a
          display flex
          flex-direction column
          align-items center
          margin-bottom 5px
          padding-bottom 13px
          transition 0.2s

          .categoryImg
            width 88px
            height 88px
            display flex
            background-color #f1f3f5
            justify-content center
            align-items center
            border-radius 48px
            margin-bottom 8px

            @media(max-width 767px)
              width 64px
              height 64px

            .icon
              width 39px
              height 39px

              @media(max-width 767px)
                width 28px
                height 28px

              use
                fill $gray-600


        p
          text-align center
          display flex
          justify-content center
          align-items center
          min-height 46px
          line-height normal
          font-size 18px
          width 136px

          @media(max-width 767px)
            width 75px
            height 36px
            font-size 14px
            min-height auto

.sticky
  position fixed
  top 0
  left 0
  right 0
  z-index 10
  padding-left 14px
  margin 0 !important

  @media(max-width 767px)
    padding-left 0
    top 48px

  .title
    display none

  #top-menu
    padding-top 30px


.sticky + .brandsBox
  padding-top 190px

  @media(max-width 767px)
    padding-top 180px

.stickyTop
  .brandsBox
    #brandBox
      padding-top 120px

      @media(max-width 767px)
        padding-top 50px
