.iyziTabs
  .iyzi-container
    flex-direction column
    padding 0

    .tab-content
      width 100%

      .active
        display flex

      ul
        margin 60px 0 0 0
        padding 0
        list-style none
        padding 0 15px

        @media (max-width 767px)
          flex-direction column
          margin 22px 0 0 0

        li
          padding 0 30px 0 0
          margin 0
          width 100%

          @media (max-width 767px)
            padding 20px 0

          &:last-child
            padding 0

            @media (max-width 767px)
              padding 20px 0

          img
            margin-bottom 56px

            @media (max-width 767px)
              width 96px
              height 96px
              margin-bottom 24px

          h3
            font-size 40px
            font-weight bold
            line-height normal
            padding-bottom 24px
            color $gray-900

            @media (max-width 767px)
              font-size 24px
              padding-bottom 8px

          p
            font-size 24px
            line-height normal
            font-weight normal
            color $gray-900

            @media (max-width 767px)
              font-size 16px
              line-height 1.56


  .nav-tabs
    width 100%
    display flex
    justify-content flex-start
    border-bottom 1px solid #f1f3f5
    margin 0 15px

    li
      font-size 24px
      margin-bottom 6px

      a
        color $gray-600
        background-color transparent
        border none
        margin-right 40px
        padding 0
        font-size 28px
        font-weight bold
        line-height normal

        @media (max-width 767px)
          font-size 16px
          margin-right 16px

        &:focus
          color $gray-600
          background-color transparent
          border none

        &:hover
          color $gray-600
          background-color transparent
          border none


    .active
      display flex

      a
        color $clear-blue

        @media (max-width 767px)
          font-size 16px

        &:hover
          opacity 1
          background-color transparent
          color $clear-blue
          border none

        &:focus
          opacity 1
          background-color transparent
          color $clear-blue
          border none

        &:after
            content ""
            border-bottom 4px solid $clear-blue
            border-radius 0 0 2px 2px
            display flex
            margin 16px 0px -10px 0px
