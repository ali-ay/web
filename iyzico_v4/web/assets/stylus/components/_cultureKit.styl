.cultureKit
  width 100%
  background-image: url('../images/content/culture-kit-bg.svg?v=v4.0.28')
  background-color #fff
  background-repeat no-repeat
  background-position left

  @media (max-width 768px)
    background-image: url('../images/content/culture-kit-bg-768.svg?v=v4.0.28')
    background-repeat no-repeat
    background-position left
    margin-top 30px

  .container
    display flex
    flex-direction row

    @media (max-width 768px)
      flex-direction column-reverse

    .leftContent
      display flex
      flex 1
      flex-direction column
      justify-content flex-start
      padding 0 15px

      img
        width 100%

    .rightContent
      display flex
      flex 1
      flex-wrap wrap
      flex-direction column
      padding 0 15px
      justify-content center

      @media (max-width 768px)
        flex-direction column
        padding-top 80px

      .title
        font-size 24px
        line-height 29px
        font-weight bold
        color $clear-blue
        padding-bottom 5px

        @media (max-width 768px)
          font-size 18px

        @media (max-width 640px)
          font-size 14px
          line-height 17px

      .subTitle
        font-size 42px
        font-weight 500
        line-height normal
        color #202020
        padding-bottom 20px

        @media (max-width 768px)
          font-size 38px

        @media (max-width 640px)
          font-size 20px
          line-height 24px
          padding-bottom 15px

      .description
        color #848484
        font-size 18px
        line-height 1.67

        @media (max-width 768px)
          font-size 14px

        @media (max-width 640px)
          font-size 12px

      .buttonGroup
        display flex
        align-items center
        justify-content flex-start
        width 100%
        padding 45px 0 0 15px

        @media (max-width 640px)
          align-items center
          justify-content center
          margin 20px 0 30px 0
          padding 0
