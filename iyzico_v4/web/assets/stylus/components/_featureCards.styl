.featureCards
  display flex

  .container
    display flex
    width 100%
    max-width 1270px
    padding 0 35px
    flex-direction column

    @media (max-width 960px)
      min-height 100%

    @media (max-width 640px)
      display block
      padding 0 20px

    .featureHeaderImage
      display inline-block
      justify-content center
      padding-top 30px

      img
        width 100%

    .featureHeaderTitle
      display flex
      flex-direction column
      align-items center
      align-self center
      max-width 970px
      padding-top 40px

      .widgetDescription
        text-align center
        padding 20px 0 10px 0

    ul
      display flex
      padding 30px 0
      margin 0
      justify-content center

      @media (max-width 640px)
        flex-direction column
        padding 0
        align-items center

      li
        display flex
        flex-direction column
        align-items center
        padding 0 15px
        margin 0
        flex 1
        text-align center
        max-width 400px

        @media (max-width 640px)
          padding 15px 0

        i
          margin-bottom 40px

          @media (max-width 640px)
            margin-bottom 10px

        h3
          height 58px

          @media (max-width 640px)
            min-height auto
            height auto
            line-height normal

        p
          padding 30px 0 0 0
          font-size 14px
