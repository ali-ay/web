.iyzi-pwi
  display flex
  padding 33px 0
  margin 120px 0

  @media(max-width 767px)
    margin 60px 0 40px 0
    padding 0

  .iyzi-container
    padding 0 15px

    @media(max-width 1023px)
      padding 0 48px

    @media(max-width 767px)
      padding 0 8px

    .clear-blue-bg
      display flex
      border-radius 24px

      @media(max-width 1023px)
        flex-direction column

      .pwi-img
        margin -32px 0 -30px 0
        flex 1

        @media(max-width 1199px)
          margin -27px 0 -30px 0

        @media(max-width 1023px)
          margin -36px 0 -30px 0
          padding-right 42px

        @media(max-width 767px)
          padding-right 5px
          margin -16px 0 -30px 0

        img
          width 100%

      .pwi-content
        padding 0 32px 0 30px
        display flex
        justify-content center
        flex-direction column
        flex 1

        @media(max-width 1199px)
          padding 30px

        @media(max-width 767px)
          padding 24px 16px 30px 16px

        .title
          font-size 48px
          line-height 67px
          color #ffffff
          padding-bottom 37px

          @media(max-width 1023px)
            padding-top 48px

          @media(max-width 767px)
            font-size 34px
            line-height normal
            padding 24px 0 16px 0

          span
            color #d0e4ff
            display flex

        p
          font-size 24px
          line-height normal
          color #ffffff

          @media(max-width 767px)
            font-size 16px

