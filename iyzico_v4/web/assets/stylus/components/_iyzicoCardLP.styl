.iyzicoCardLP
  .newHeaderComponent
    background-image url('../images/content/iyzico-card-hero-bg.png')

    @media(max-width 1023px)
      background-size 200% 586px
      background-position top right

    @media(max-width 767px)
      background-image url('../images/content/iyzico-card-hero-bg-m.png')
      background-size 100% 230px

    .iyzi-container
      .imgResp
        align-self center

        @media(max-width 1023px)
          min-height 584px
          align-items center

        @media(max-width 767px)
          min-height 230px
          align-items center

        img
          max-width 521px

          @media(max-width 767px)
            max-width 190px
            max-height 195px

      .content
        @media (max-width 1023px)
          padding 32px 48px

        @media (max-width 767px)
          padding 16px 8px 48px 8px

        .buttonGroup
          @media(max-width 767px)
            justify-content center

          .appDownload
            display flex

            a
              display flex

              @media(max-width 767px)
                width 144px
                height 43px

              &:first-child
                margin-right 30px

                @media(max-width 767px)
                  margin-right 12px

              img
                width 100%

  .newiyziCards
    .iyzi-container
      padding 84px 0 0 0

      @media(max-width 767px)
        padding 0

      .cardWrap
        @media(max-width 960px)
          flex-direction column
          padding-bottom 0

        .cardBox
          @media(max-width 767px)
            padding 24px 8px

          img
            @media(max-width 767px)
              max-width 64px !important

          h3
            @media(max-width 960px)
              padding 16px 0 10px 0

            @media(max-width 767px)
              padding 16px 0

          p
            @media(max-width 960px)
              padding 0 0 45px 0

            @media(max-width 767px)
              padding 0


  .iyziLife
    padding 63px 0 0 0

    @media(max-width 960px)
      padding 0

    ul
      li
        padding 57px 0

        @media(max-width 960px)
          flex-direction column-reverse
          padding 40px 0

        &:first-child
          @media(max-width 767px)
            padding 24px 0 0 0

          .itemimg
            @media(max-width 767px)
              margin-top 0

        &:nth-child(even)
          @media(max-width 960px)
            flex-direction column

        &:last-child
          @media(max-width 960px)
            flex-direction column-reverse
            margin-bottom 55px


            .itemContent
              h3
                margin-top 0

            .itemimg
              margin-top 34px

              @media(max-width 767px)
                margin-top 0

          @media(max-width 767px)
            margin-bottom 8px
            padding 8px 0 40px 0

        .contentWrap
          display flex
          flex 1
          justify-content center

          .mobileWrap
            display flex
            flex 1
            flex-direction column
            justify-content center

          .itemContent
            flex none

        .itemContent
          h3
            margin-top 56px
            text-align left

            @media(max-width 767px)
              margin-top 0

          .appDownload
            margin-top 28px
            padding 0 0 0 15px
            display flex

            @media(max-width 960px)
              display none

            a
              display flex

              @media(max-width 767px)
                width 144px
                height 43px

              &:first-child
                margin-right 30px

                @media(max-width 767px)
                  margin-right 12px

          p
            display flex

            @media(max-width 767px)
              padding-top 18px


            &:first-of-type
              &:before
                content none

            &:last-of-type
              &:before
                content none

            &:before
              content ""
              background-image: url('../images/icons/check.svg')
              margin 0 24px 0 0px
              width 36px
              height 36px
              background-size contain
              display flex

              @media(max-width 767px)
                width 24px
                height 24px

        .itemimg
          align-self center

          @media(max-width 767px)
            display flex
            justify-content center
            margin-top 8px

          img
            max-height 721


          .dH
            display none !important

            @media (max-width 767px)
              display block !important

          .mH
            @media(max-width 767px)
              display none

      .getNewCard
        @media(max-width 767px)
          padding-top 24px !important

        .itemimg
          @media(max-width 960px)
            flex-direction column
            align-items center

          @media(max-width 767px)
            padding-top 16px

          .appDownload
            display none

            @media(max-width 960px)
              display flex
              padding 0
              justify-content space-around
              max-width 484px
              margin 0px auto

            @media(max-width 767px)
              flex-direction column

            a
              width 212px
              height 62px
              margin 0 0 18px 0

  .iyziTabs
    margin-top 63px

    @media(max-width 960px)
      margin 0 0 40px 0

    @media(max-width 767px)
      margin 0

    .iyzi-container
      @media(max-width 960px)
        padding 0 48px

      @media(max-width 767px)
        padding 0 8px

      .nav-tabs
        justify-content center
        flex-wrap nowrap

        @media(max-width 960px)
          margin 0

        @media(max-width 767px)
          width fit-content
          min-width 100%
          display flex
          justify-content space-between

          &:before
            display none

          &:after
            display none

        li
          display flex
          justify-content center
          margin 0 54px 6px 54px

          @media(max-width 767px)
            margin 0 4px 6px 4px
            padding 0

          a
            margin 0
            font-size 24px
            color $gray-600
            font-weight normal
            min-width 224px
            line-height 40px
            text-align center

            @media(max-width 767px)
              min-width 144px
              font-size 16px
              line-height 20px

        .active
          a
            color $clear-blue
            font-weight bold

      .tab-content
        ul
          margin 4px 0 0 0
          padding 0

          li
            @media(max-width 767px)
              padding 0

            ul
              margin-top 56px
              padding 0 15px

              @media(max-width 960px)
                padding 0

              @media(max-width 767px)
                margin-top 23px

              .secHeader
                margin-bottom 32px
                padding-left 32px

                @media(max-width 767px)
                  padding-left 16px
                  margin-bottom 24px

                .headerTitle
                  font-size 24px
                  font-weight bold
                  line-height 32px
                  padding-bottom 4px

                .headerDesc
                  font-size 14px
                  color $gray-600
                  line-height normal

              li
                padding 16px 32px
                border-radius 16px
                margin 8px 0
                background-color #ffffff
                min-height 72px
                display flex

                @media(max-width 767px)
                  padding 12px 16px

                &:nth-child(even)
                  background-color $gray-200


                .containerWrap
                  display flex
                  justify-content space-between
                  width 100%

                  .content
                    display flex
                    align-items flex-start
                    justify-content center
                    flex-direction column

                    @media(max-width 767px)
                      max-width 208px

                    .title
                      font-size 16px
                      font-weight bold
                      line-height normal
                      color $gray-900

                      @media(max-width 767px)
                        font-size 14px

                      span
                        font-weight normal

                    .description
                      font-size 14px
                      line-height normal
                      color $gray-600
                      padding-top 2px

                      @media(max-width 767px)
                        font-size 12px

                  .price
                    align-self center
                    color $clear-blue
                    font-size 16px
                    font-weight bold
                    line-height normal

                    @media(max-width 767px)
                      font-size 14px

