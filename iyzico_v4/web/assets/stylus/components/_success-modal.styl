.register
  & .success-modal
      &__wrapper
        & .modal-content
          clearfix()
          width 100%
          height auto
          padding 60px
          border-radius 0
          border 0

.success-modal
  position fixed

  & .button__calltoaction
    letter-spacing 1px
    text-align center
      @media (max-width: 768px)
        width auto

      @media (max-width: 480px)
        font-size 16px

  & .error
    position relative
    font-size 11px
    color red
    font-weight normal

  & input.error
    border 1px solid red

  &__wrapper
    width 790px
    max-width 790px
    min-height 487px
    box-shadow 0 0 40px 0 rgba(0, 0, 0, 0.1)

    @media (max-width 920px)
      width 100%
      margin-top 0!important

    & .modal-content
      clearfix()
      width 100%
      height auto
      padding 90px
      border-radius 0
      border 0

      @media(max-width 480px)
        padding 60px 20px

      & h2
        color #49d260
        font-size 36px
        font-weight 300
        line-height 1.39
        margin-top 30px
        margin-bottom 30px

      & p
        font-size 18px
        color #444444
        margin-bottom 60px
.register
  & h3
    marign-top 0
    margin-bottom 20px
    font-size 24px
    font-weight 600
  & p
    font-size 16px
    line-height 1.5
    margin-bottom 20px !important
  & ul
    padding 0
    margin-left 19px
    margin-bottom 30px
    & li
      line-height 1.5
  & p.note
    font-size 14px

.modal.fade
  .modal-dialog
    -webkit-transform none

    @media (max-width 768px)
      position relative
      right 0


.iyzi-site
  .modal
    .modal-dialog
      width 100%
      display flex
      position fixed
      top 0
      left 0
      right 0
      bottom 0
      max-width 900px
      height 100%

      @media (max-width 640px)
        display block

      .modal-content
        padding 60px
        width 100%
        height 80%
        overflow-y auto
        max-height 800px
        justify-content center

        @media (max-width 640px)
          height 100%
          padding 30px 20px

        p
          margin-bottom 0

          @media (max-width 768px)
            padding 0 30px


        .row
          margin 0
          flex-direction column
          align-items center
          height auto

          button
            margin 5px 30px 0px auto
            border none

          h2
            padding 40px 0 30px 0
            color #202020

            @media (max-width 768px)
              padding 30px 0 20px 0

          h3
            padding 30px 0

            @media (max-width 768px)
              padding 15px 0

          ul
            list-style none
            padding 0 0 40px 0
            margin 0

            @media (max-width 768px)
                padding 0 30px 40px 30px

            @media (max-width 640px)
                padding 0

            li
              font-size 14px
              line-height 24px
              list-style none
              color #848484

              @media (max-width 768px)
                font-size 12px
