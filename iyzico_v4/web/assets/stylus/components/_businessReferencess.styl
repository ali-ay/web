.businessReferencessHeader

  .container
    padding-top 215px
    display flex
    align-items center
    justify-content center
    flex-direction column

    @media (max-width 640px)
      padding-top 70px

    .headerContent
      display flex
      flex-direction column
      justify-content center
      align-items center

      .title
        font-size 48px
        font-weight 300
        text-align center
        padding 0 0 30px 0

        @media (max-width 640px)
          font-size 24px

        b
          font-weight bold
          display block

      p
        text-align center
        font-size 18px
        line-height 1.67
        color #848484

        @media (max-width 640px)
          font-size 12px

  .businessReferencessCards
    .container
      padding-top 0

.businessReferencess
  .businessReferencessCards
    margin-bottom 120px

    @media(max-width 767px)
      margin-bottom 72px

    .container
      .referencessWrap
        padding 0

        .referencessBox
          box-shadow none
          background-color $gray-200
          border-radius 16px
          padding 40px
          display flex
          align-items flex-start

          @media(max-width 767px)
            padding 40px 16px

          i
            margin-top 0

          p
            padding 0
            text-align left
            margin-bottom 24px
            font-weight normal
            line-height normal

          .imgWrap
            width 100%
            display flex
            justify-content flex-end
            margin-top auto

            img
              padding 0


  .referencessBrands
    background-color #ffffff
    margin 75px 0

    .container
      height 100%
      display flex
      justify-content space-around
      align-items center
      overflow scroll

      @media (max-width 1200px)
        width 100% !important
        max-width 1200px !important

      @media (min-width: 992px)
        width 100%
        max-width 1200px !important

      @media (max-width 640px)
        height auto

.smeBrands
  .container
    justify-content center

    img
      padding 0 50px

      @media (max-width 640px)
        padding 0 10px
        height 50px
