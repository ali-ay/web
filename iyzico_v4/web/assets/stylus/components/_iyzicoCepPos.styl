.iyzicoCepPos
  .newHeaderComponent
    background-image url('../images/content/cep-pos-hero-bg.png')

    .iyzi-container
      .content
        @media(max-width 767px)
          padding-bottom 0

        .buttonGroup
          .appDownload
            img
              @media(max-width 767px)
                width 146px
                height 44px

        h1
          width 626px

          @media(max-width 1023px)
            display inline-flex

          @media(max-width 767px)
            display inline-table
            width 100%

  .iyziLife
    padding 80px 0 0 0

    @media(max-width 1023px)
      padding 16px 0 0 0

    @media(max-width 767px)
      padding 24px 0 0 0

    ul
      li
        @media(max-width 1023px)
          padding 40px 0

        @media(max-width 767px)
          padding 24px 0

        .itemContent
          h3
            font-size 40px
            line-height 1.4
            display grid

            @media(max-width 1023px)
              display inline
              font-size 34px
              text-align center

            @media(max-width 767px)
              font-size 24px

            p
              font-size 14px

              @media(max-width 767px)
                font-size 12px
          p
            @media(max-width 1023px)
              text-align center


  .iyzicoCardLP
    .iyziTabs
      margin-top 24px 0 0 0

      .iyzi-container
        padding 0 48px

        @media(max-width 960px)
          margin-top 80px

        @media(max-width 767px)
          padding 0 8px

        .tab-content
          ul
            margin 0

            li
              ul
                margin-top 0

                .secHeader
                  padding-left 0

                  .headerTitle
                    font-size 40px
                    line-height normal

                    @media(max-width 767px)
                      font-size 28px

                li
                  background-color #ffffff

                  &:nth-child(odd)
                    background-color $gray-200

                  .containerWrap
                    .content
                      .title
                        font-size 24px

                        @media(max-width 767px)
                          font-size 16px

                    .price
                      font-size 24px

                      @media(max-width 767px)
                        font-size 16px

                .buttonGroup
                  margin 24px 0 0 0

                  @media(max-width 767px)
                    justify-content center

                  .button
                    min-width 240px
                    justify-content center

                    @media(max-width 767px)
                      min-width 288px

  .iyziRegister
    background-color #fff8f6
    padding 136px 0

    @media(max-width 1023px)
      padding 80px 0

    @media(max-width 767px)
      padding 48px 0

    .container
      max-width 1170px

      h2
        font-size 40px
        color $orange-pink
        font-weight bold
        line-height normal
        padding-bottom 16px

        @media(max-width 767px)
          font-size 24px
          line-height normal

      p
        font-size 24px
        color $gray-900
        padding-bottom 40px

        @media(max-width 767px)
          font-size 16px
          line-height normal

      .button
        color $gray-100
        max-width 240px

        @media(max-width 767px)
          max-width 288px

  .iyzi-site .modal.fade.in
    display flex !important
    align-items center

    @media (max-width 767px)
      height 100%

  .iyzi-site
    .modal
      .modal-dialog
        max-width 830px
        top auto
        right auto
        bottom auto
        left auto
        position relative
        height fit-content

        @media (max-width 767px)
          position fixed
          padding 14px 8px
          height 100%

  .personalMobileAppSlider
    .sliderContainer
      .slick-list
        @media (max-width 960px)
          height 730px

        @media (max-width 767px)
          height 434px
