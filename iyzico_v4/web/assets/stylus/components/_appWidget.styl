.appWidget
  display flex
  padding 100px 0

  .container
    display flex

    @media (max-width 640px)
      flex-direction column-reverse

    .content
      flex 1
      align-items flex-start
      display flex
      justify-content center
      flex-direction column

      @media (max-width 640px)
        padding 0 20px

      .title
        font-size 42px
        font-weight 500
        color #202020

      ul
        list-style none
        padding 30px 0

        @media (max-width 768px)
          padding 40px 0

        @media (max-width 640px)
          padding 20px 0

        li
          font-size 24px
          font-weight bold
          line-height normal
          color #202020
          padding 0 0 20px 0

          @media (max-width 768px)
            padding 0 0 20px 0
            font-size 18px

          i
           margin 0 10px 0 0

      .appDownload
        @media (max-width 640px)
          display flex
          align-items center
          justify-content space-around
          flex-direction row
          width 100%

        i
          margin 0 15px 0 0

          @media (max-width 768px)
            margin 10px 0

    .contentImage
      flex 1
      display flex
      justify-content center

      img
        max-height 600px

        @media (max-width 768px)
          max-height 320px
