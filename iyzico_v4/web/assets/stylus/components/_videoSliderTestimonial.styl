.videosliderTestimonial
  width 100%
  margin-bottom 120px

  @media (max-width 1023px)
    margin-bottom 50px

  .slick-prev
    background-image: url('../images/icons/basic-icn-leftarrow.svg') !important
    width 56px
    height 56px
    opacity 1
    overflow visible
    z-index 9
    top 70%
    left calc(calc(100% / 2) - 460px )

    @media (max-width 1023px)
      left calc(calc(100% / 2) - 375px )
      top 80%
      zoom 0.8

    @media (max-width 767px)
      display none !important


  .slick-next
    background-image: url('../images/icons/basic-icn-rightarrow.svg') !important
    width 56px
    height 56px
    opacity 1
    overflow visible
    z-index 9
    top 70%
    right calc(calc(100% / 2) - 460px )

    @media (max-width 1023px)
      right calc(calc(100% / 2) - 375px )
      top 80%
      zoom 0.8

    @media (max-width 767px)
      display none !important

  .sliderContainer
    width 100%

    .slick-track
      transition transform 200ms ease 0s
      display flex
      align-items flex-end

    .testimonialBox
      max-width 870px
      width 100%
      display flex
      flex-direction column
      background-color unset
      border-radius 16px
      overflow hidden
      align-items center
      justify-content center
      min-height 433px

      @media (max-width 1023px)
        max-width 630px
        min-height 300px

      @media (max-width 767px)
        flex-direction column
        margin-right 8px
        max-width 260px
        min-height 136px
        overflow visible

      p
        font-size 40px
        font-weight bold
        line-height normal
        color $gray-900
        text-align center
        padding-bottom 72px
        display none
        text-decoration none

        @media (max-width 767px)
          font-size 24px
          padding-bottom 32px
          margin 0 -30px

        span
          color $orange-pink

        .title
          display block

      .video-responsive
        max-width 770px
        border-radius 16px
        overflow hidden
        margin-top 0

        @media (max-width 1023px)
          max-width 520px

        @media (max-width 767px)
          max-width 240px

        iframe
          display block
          opacity 0.32
          height 360px

          @media (max-width 1023px)
            height 250px
            width 520px

          @media (max-width 767px)
            max-width 240px
            height 120px

  .slick-active
    margin-top 0px !important
    max-width 870px !important

    @media (max-width 1023px)
      max-width 520px !important

    @media (max-width 767px)
      max-width 240px !important

    p
      display block !important

    .video-responsive
      iframe
        opacity 1 !important
        height 433px !important

        @media (max-width 1023px)
          height 293px !important

        @media (max-width 767px)
          height 136px !important
