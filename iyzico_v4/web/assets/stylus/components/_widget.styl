.widget
  &BgPink
    width 100%
    background-image: url('../images/content/pink.svg?v=v4.0.28')
    background-color #fff
    margin 40px 0
    background-repeat no-repeat
    background-position left

    @media (max-width 768px)
      background-image: url('../images/content/pink_tablet.svg?v=v4.0.28')
      margin 20px 0

    @media (max-width 640px)
      background-image: url('../images/content/pink_mobile.svg?v=v4.0.28')

  &BgBlue
    width 100%
    background-image: url('../images/content/blue.svg?v=v4.0.28')
    background-color #fff
    background-repeat no-repeat
    background-position right
    margin 40px 0

    @media (max-width 768px)
      margin 20px 0

    @media (max-width 640px)
      background-image: url('../images/content/blue_mobile.svg?v=v4.0.28')

    .container
      @media (max-width 640px)
        flex-direction column-reverse !important

  .container
    display flex

    @media (max-width 640px)
      flex-direction column
      padding 0 20px

    .content
      display flex
      padding 15px
      flex 1
      justify-content center
      align-items flex-start
      flex-direction column

      @media (max-width 640px)
        padding 5px

      .widgetTitle
        padding-bottom 5px

        @media (max-width 768px)
          font-size 18px

        @media (max-width 640px)
          padding-top 50px

      p
        padding 20px 0 60px 0

        @media (max-width 768px)
          padding 20px 0 30px 0

        @media (max-width 768px)
          padding 15px 0 30px 0

      ul
        list-style none
        padding 60px 0

        @media (max-width 640px)
          padding 0

        li
          font-size 18px
          line-height 1.67
          display inline-flex
          align-items center
          color #848484

          @media (max-width 768px)
            font-size 14px

          @media (max-width 640px)
            font-size 12px

          span
            font-size 28px
            color $clear-blue
            font-weight 500
            background-color #fff
            border 2px solid #e9e9e9
            border-radius 25px
            min-width 45px
            height 45px
            margin-right 15px
            display inline-flex
            align-items center
            justify-content center

            @media (max-width 640px)
              font-size 18px
              font-weight 500
              min-width 25px
              height 25px

        .pL-60
          padding-left 60px


      .buttonGroup
        flex-wrap wrap
        width 100%
        max-width 570px

        @media (max-width 640px)
          flex-direction column

        .button
          @media (max-width 640px)
            padding 7px 15px


    .contentImage
      display flex
      padding 15px
      flex 1
      justify-content center
      align-items center

      @media (max-width 640px)
        padding-top 30px


      img
        width 100%

        @media (max-width 768px)
          margin 50px 0

        @media (max-width 640px)
          margin 0
