.iyziLife
  display flex

  .iyzi-container
    padding 0 15px
    flex-direction column

    @media(max-width 1023px)
      padding 0 48px

    @media(max-width 767px)
      padding 0 8px

    .iyziLifeHeader
      display flex
      align-items center
      flex-direction column

      h2
        font-size 48px
        line-height 1.4
        font-weight bold
        color $gray-900

        @media(max-width 1023px)
          padding 0 48px

        @media(max-width 767px)
          font-size 28px
          line-height normal

      p
        font-size 24px
        line-height normal
        font-weight normal
        color $gray-900
        max-width 770px
        text-align center

        @media(max-width 767px)
          font-size 16px
          line-height 1.56

  .title
    font-size 40px
    font-weight bold
    line-height normal
    text-align center

    @media(max-width 767px)
      font-size 16px

  ul
    list-style none
    padding 0
    margin 0

    li
      display flex
      padding 40px 0

      @media(max-width 1023px)
        padding 32px 0
        flex-direction column

        &:nth-child(even)
          flex-direction column-reverse

      @media(max-width 767px)
        padding 16px 0

      .itemimg
        flex 1
        padding 0 15px

        @media(max-width 1023px)
          padding 0

        img
          width 100%

      .itemContent
        flex 1
        display flex
        justify-content center
        align-items flex-start
        flex-direction column
        padding 0 15px

        @media(max-width 1023px)
          padding 0

        h3
          font-size 48px
          line-height 67px
          color $gray-900
          font-weight bold
          width 100%

          @media(max-width 1023px)
            font-size 34px
            line-height normal
            display inline-block
            text-align center
            margin-top 40px
            padding 0

          @media(max-width 767px)
            font-size 24px
            padding-top 16px
            text-align left
            margin-top 0

        p
          font-size 24px
          line-height normal
          color $gray-900
          margin-right 0
          padding-top 24px

          @media(max-width 1023px)
            max-width none

          @media(max-width 767px)
            font-size 16px
            padding-top 8px
            line-height 25px

        .buttonGroup
          margin 40px 0 0 0
          width 100%
          display flex
          justify-content flex-start

          @media(max-width 1023px)
            justify-content center

          @media(max-width 767px)
            padding 0 8px
            margin 16px 0 0 0
            flex-direction column

          a
            @media(max-width 1023px)
              width 100%
              max-width 370px
              display flex
              justify-content center

          .basic
            border-color $clear-blue
            display flex
            justify-content center

            &:hover
              background-color $clear-blue
              color #ffffff !important




