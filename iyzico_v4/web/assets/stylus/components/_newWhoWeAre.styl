.newWhoWeAre
  .contactHero
    background-color #1e64ff

    @media(max-width 1023px)
      background-color #ffffff

  .generalConditionsContent
    padding-top 80px

    @media(max-width 1023px)
      padding-top 48px

    @media(max-width 767px)
      padding-top 16px


    .container

      @media (max-width 1200px)
        max-width 100%

      @media(max-width 1023px)
        margin 0 0 80px 0
        padding 0 33px
        display flex
        flex-direction column

      @media(max-width 767px)
        padding 0

      .leftMenu
        display flex
        max-width 400px

        @media(max-width 1023px)
          max-width 100%

        @media(max-width 767px)
          padding 0 8px

        ul
          @media(max-width 767px)
            margin-bottom 32px

      .dropdownMenu
        display none

      .content
        display flex
        flex-direction column

        @media(max-width 767px)
          padding 0 8px

        ul
          li
            .title
              @media(max-width 767px)
                font-size 28px !important
                line-height normal !important

            p
              font-size 24px
              line-height normal

              @media(max-width 767px)
                font-size 16px !important
                line-height 25px !important


            strong
              font-size 28px
              font-weight 500
              display block
              line-height normal
              padding-top 48px

              @media(max-width 767px)
                font-size 24px !important


            .buttonGroup
              margin 0
              width 100%
              justify-content center
              padding-top 48px

              @media(max-width 960px)
                margin-bottom 72px

              @media(max-width 767px)
                flex-direction column

              .button
                width 100%
                max-width 270px
                justify-content center
                margin 0 16px

                @media(max-width 767px)
                  margin 8px 0
                  max-width none

            .brands
              display flex
              justify-content center
              padding-top 48px
              flex-wrap wrap

              img
                padding 0 16px
                width auto !important

                &:first-child
                  padding-left 0

                &:last-child
                  padding-right 0

  .iyzi-container
    .newHeaderComponent
      background-color #1e64ff

      @media (max-width 1023px)
        padding 0
        background-color #fff

      .content
        @media(max-width 1023px)
          padding 32px 48px 0 48px

        @media(max-width 767px)
          padding 16px 8px 0 8px

        h1
          color #ffffff

          @media(max-width 1023px)
            color $gray-900

        p
          color #ffffff

          @media(max-width 1023px)
            color $gray-900

        .button
          margin-top 40px
          color $clear-blue
          background-color #ffffff

          @media(max-width 1023px)
            color #ffffff
            background-color $clear-blue

          @media(max-width 767px)
            width 100%
            justify-content center

      .imgResp

        @media(max-width 1023px)
          padding-top 0
          justify-content center
          background-color #1e64ff

          @media(max-width 767px)
            height 228px

        img
          @media(max-width 1023px)
            max-height 586px
            padding 53px 0

          @media(max-width 1023px)
            padding 16px 0

  .contactHero
    .iyzi-container
      @media(max-width 767px)
        padding-top 0px
