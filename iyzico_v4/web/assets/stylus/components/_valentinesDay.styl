  .iyzicoSss
    padding 0 0 50px 0

    .iyzi-container
      max-width 1266px
      padding 0 48px

      @media(max-width 767px)
        padding 0 8px

    .sssWrap
      max-width 100%
      margin-top 40px

      ul
        max-width 100%

        li
          .sssHeader
            .title
              font-size 40px

              @media(max-width 767px)
                font-size 28px

          .description
            margin 0 -20px
            text-align center

            @media(max-width 767px)
              margin 0
              flex-wrap wrap
              justify-content center

            a
              display inline-block
              padding 40px 45px
              background-color #f8f9fa
              border-radius 16px
              margin 15px

              @media(max-width 960px)
                padding 40px 24px
                margin 8px

              @media(max-width 767px)
                padding 40px 12px
                margin 8px 0

              img
                transition transform .2s

                &:hover
                  transform scale(1.1)

        .menuOpen
          .description
            padding 10px 0 0 0

            @media(max-width 767px)
              display flex


