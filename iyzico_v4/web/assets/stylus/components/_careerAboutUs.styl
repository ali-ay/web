.careerAboutUs
  .iyzi-container
    padding 0 15px

    @media(max-width 960px)
      padding 0 48px

    @media(max-width 767px)
      padding 0 16px

    .content
      h2
        font-size 48px
        font-weight bold
        line-height 1.4
        color $gray-900
        padding-bottom 16px

        @media(max-width 767px)
          font-size 24px
          line-height normal
          padding-bottom 8px

      p
        font-size 24px
        font-weight normal
        line-height normal
        color $gray-900

        @media(max-width 767px)
          font-size 16px
          line-height 1.56
