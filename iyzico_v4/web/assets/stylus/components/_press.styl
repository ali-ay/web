.press
  position relative

  &--boxes
    padding-top 0
    margin-top -130px

    @media(max-width 768px)
      padding-top 0

    &__item
      display block
      width 330px
      max-width 330px
      min-height 430px
      background-color $white
      border-radius 10px
      margin-top 50px
      margin-left 15px
      margin-right 15px
      box-shadow 0 0 40px 0 rgba(0, 0, 0, 0.1)
      cursor pointer

      &:hover
        box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.1) !important

      &__photo
        min-height 200px
        background-color: rgba(77, 77, 77, 0.1);
        border-radius 10px
        border-bottom-left-radius 0
        border-bottom-right-radius 0

      &__logo
        margin-left 30px

      &__content
        min-height 96px
        margin 30px

        & > p
          font-size 12px
          line-height 1.5
          letter-spacing 1px
          color #4d4d4d

          @media(min-width 992px)
            font-size 16px

.press-carousel .slick-slide
  margin-bottom 20px!important

.press-carousel > .slick-dots
  margin-top 60px

.press-carousel
  & .slick-dots
    button
      width 20px
      height 20px


.pressCarouselHeader
  background-color #fafafa
  display flex
  max-height 328px
  height 328px

  @media (max-width 640px)
    max-height 260px

  .title
    font-size 48px
    color #202020
    font-weight bold
    line-height normal
    text-align center
    padding 100px 0 20px 0

    @media (max-width 768px)
      font-size 38px
      padding 80px 0 20px 0

    @media (max-width 640px)
      font-size 24px
      padding 50px 20px 20px 20px

  .description
    font-size 18px
    color #848484
    line-height normal
    text-align center

.pressItem
  display flex
  flex-direction column
  padding-bottom 80px

  @media(max-width 767px)
    padding-bottom 40px

  span
    font-size 24px
    color $clear-blue
    font-weight bold
    line-height normal
    padding-bottom 24px

    @media(max-width 767px)
      font-size 16px
      line-height 1.56
      padding-bottom 8px

  h3
    font-size 34px
    color $gray-900
    font-weight bold
    line-height normal
    padding-bottom 24px

    @media(max-width 767px)
      font-size 24px
      padding-bottom 16px

  p
    font-size 16px !important
    color $gray-900
    line-height 1.56 !important

  .basic
    border-color $clear-blue
    color $clear-blue

    @media(max-width 767px)
      margin-top 24px

    &:hover
      background-color $clear-blue
      color #ffffff

    &:focus
      background-color $clear-blue
      color #ffffff

  .buttonText
    margin-top 0
    display inline
    padding 0

    &:hover
      color $clear-blue
      font-weight normal

    &:focus
      color $clear-blue
      font-weight normal


