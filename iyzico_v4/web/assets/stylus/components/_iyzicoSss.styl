.iyzicoSss
  padding 0 0 100px 0
  display flex

  @media (max-width 640px)
    padding 0 0 30px 0

  .container
    display flex
    justify-content center
    align-items center
    flex-direction column
    width 100%
    max-width 1270px
    padding 0 50px

    @media (max-width 640px)
      padding 0 8px

    .description
      font-size 18px
      color #848484
      line-height 1.67
      padding 20px 0
      max-width 970px

      @media (max-width 768px)
        font-size 14px

      @media (max-width 640px)
        padding 20px 0 0 0

    .title
      font-size 48px
      font-weight bold
      line-height normal
      color #202020

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        max-width 90%
        font-size 24px

  .sssWrap
    padding-top 20px
    width 100%
    max-width 970px

    @media (max-width 640px)
      padding 0

    .description
      display none

    .menuOpen
      .description
        display block
        padding 10px 40px 0 0

    ul
      list-style none
      padding 0
      max-width 970px

      li
        padding 30px 0 !important
        border-bottom 1px solid #ebebeb
        width 100%
        cursor pointer

        @media (max-width 768px)
          padding 20px 0

        .sssHeader
          display flex
          justify-content space-between
          align-items center

          h3
            @media(max-width 767px)
              max-width calc(100% - 26px)

          .title
            font-size 24px
            color #202020
            line-height normal
            font-weight bold

            @media (max-width 768px)
              font-size 18px

            @media (max-width 640px)
              font-size 14px

  .iyziTabs
    padding-top 36px

    .iyzi-container
      .nav-tabs
        justify-content center

      .tab-content
        ul
          margin 0

