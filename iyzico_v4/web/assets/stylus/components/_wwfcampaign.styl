.wwfcampaign
  text-decoration none

  .newHeaderComponent
    background-color #a4a0c5
    background-image url('../images/content/wwf-campaign-hero-img2.png')
    background-size 100%
    background-repeat no-repeat
    background-position right bottom


    @media(max-width 1023px)
      background-color #ffffff
      background-image none

    .iyzi-container
      padding 0 15px

      @media(max-width 1023px)
        background-image none
        padding 0

      .content
        max-width 630px

        @media(max-width 1023px)
          max-width 100%

        h1
          display flex
          color #ffffff
          font-weight bold
          line-height 1.4

          @media(max-width 1023px)
            color $gray-900

          @media(max-width 767px)
            line-height normal

        p
          color #ffffff

          @media(max-width 1023px)
            color $gray-900

          br
            @media(max-width 767px)
              display none

        .deercaseLogo
          max-width 270px
          padding 16px 0 24px 0

          @media(max-width 1023px)
            max-width 100%
            display flex
            justify-content center

          .mH
            display block

            @media(max-width 1023px)
              display none

          .dH
            display none

            @media(max-width 1023px)
              display block

        .basic
          border-color #ffffff
          color #ffffff

          @media(max-width 1023px)
            border-color $orange-pink
            color $orange-pink

          &:hover
            background-color #ffffff
            color $orange-pink

            @media(max-width 1023px)
              border-color $orange-pink
              color $orange-pink

      .imgResp
        display none

        @media(max-width 1023px)
          display flex
          background-color #a4a0c5

  .iyziLife
    ul
      li
        .itemContent
          p
            max-width 470px

  .generalConditions
    padding 80px 0 120px 0

    @media(max-width 960px)
      padding 80px 0

    @media(max-width 767px)
      padding 0 0 80px 0

    .iyzi-container
      .content
        background-color $gray-200
        padding 48px 70px
        border-radius 16px
        margin 0 15px

        @media(max-width 960px)
          padding 40px 32px

        @media(max-width 767px)
          padding 16px 8px

        .title
          font-size 34px
          font-weight bold
          line-height normal
          padding-bottom 40px

          @media(max-width 767px)
            font-size 24px
            padding-bottom 16px

        ul
          list-style none
          padding 0 0 0 22px

          li
            font-size 24px
            line-height normal
            position relative
            padding 0 0 32px 0

            @media(max-width 767px)
              font-size 14px
              padding 0 0 16px 0

            &::before
              position absolute
              content ""
              height 6px
              width 6px
              border-radius 16px
              background-color #000000
              left -16px
              top 17px

  .newWhoIsiyzico
    background-color #ffffff
    padding 0

    .container
      .title
        text-align left
        color $gray-900
        font-size 48px
        font-weight bold
        line-height 1.4

        @media(max-width 959px)
          max-width 430px
          margin 0px auto

        @media(max-width 767px)
          font-size 28px
          line-height normal
          padding-left 8px

      ul
        padding 48px 0 0 0

        @media(max-width 959px)
          align-items center

        @media(max-width 767px)
          padding 32px 0 0 0

        li
          @media(max-width 959px)
            max-width 370px

          @media(max-width 767px)
            max-width 100%
            padding 0 4px

          .sub
            color $clear-blue

          img
            @media(max-width 959px)
              max-width 370px

            @media(max-width 767px)
              max-width 240px

  .iyziRegister
    .container
      .downloadBtn
        a
          &:first-child
            margin-right 15px

            @media(max-width 767px)
              margin-right 8px

.dH
  display none !important

  @media(max-width 1023px)
    display block !important


.campaignEnd
  .newHeaderComponent
    background-color $gray-400
    background-image url('../images/content/wwf-campaign-hero-img2-closed-bg.png')
    background-repeat repeat-x
    background-size contain
    background-position bottom

    @media(max-width 1023px)
      background-color #ffffff
      background-image none

    .iyzi-container
      background-image url('../images/content/wwf-campaign-hero-img2-closed.png')
      background-size 100%
      background-repeat no-repeat
      background-position right bottom

      @media(max-width 1023px)
        background-image none

      .content
        h1
          color $gray-900

        p
          color $gray-900

      .imgResp
        display none

        @media(max-width 1023px)
          display flex
          background-color $gray-400

      .deercaseLogo
        @media(max-width 1023px)
          justify-content flex-start

      .buttonGroup
        .button
          background-color $gray-900 !important
          color $gray-100 !important
