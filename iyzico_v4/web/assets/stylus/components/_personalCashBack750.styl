    background-color #ffffff
    padding 0

    .container
      .title
        text-align left
        color $gray-900
        font-size 34px
        font-weight bold
        line-height 1.4

        @media(max-width 959px)
          max-width 430px
          margin 0px auto

        @media(max-width 767px)
          font-size 28px
          line-height normal
          padding-left 8px

      ul
        padding 48px 0 0 0

        @media(max-width 959px)
          align-items center

        @media(max-width 767px)
          padding 32px 0 0 0

        li
          @media(max-width 959px)
            max-width 370px

          @media(max-width 767px)
            max-width 100%
            padding 16px 40px

          .sub
            color $clear-blue

            @media(max-width 959px)
              padding 32px 0 8px 0

          img
            @media(max-width 959px)
              max-width 370px

            @media(max-width 767px)
