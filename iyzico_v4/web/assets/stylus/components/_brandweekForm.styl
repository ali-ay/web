.brandweekForm
  display flex
  flex-direction column
  align-items center
  padding 100px 0

  @media (max-width 960px)
    padding 80px 0

  @media (max-width 640px)
    padding 35px 0

  i
    font-size 14px
    padding 50px 0 0 0
    color #848484
    text-align center
    font-weight bold

    @media(max-width 768px)
      font-size 12px
      padding 25px 20px 70px 20px

  .container
    display flex
    width 100%
    max-width 770px
    padding 0 35px

    @media (max-width 960px)
      min-height 100%

    @media (max-width 640px)
      flex-direction column
      display block
      padding 0 20px

    .newForm
      width 100%

      @media(max-width 768px)
        padding 5px

      .contractText
        max-width 100%
        margin 0 0 30px 0

      .buttonGroup
        justify-content flex-end

        @media(max-width 768px)
          justify-content center

        a
          @media(max-width 640px)
            max-width 100%

.brandweek
  .headerImageComponent
    .container
      display flex
      flex-direction row


.mobileFirst
  display none

  @media(max-width 768px)
    display block

.desktopFirst
  display block

  @media(max-width 768px)
    display none
