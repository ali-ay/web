.howToSalesIncrease
  padding 50px 0
  margin 0
  display flex

  @media (max-width 640px)
    margin 0
    padding 30px 0

  .container
    display flex
    justify-content center
    flex-direction column
    align-items center

    @media (max-width 768px)
      padding 0 6px

    @media (max-width 640px)
      padding 0 10px

    h2
      font-size 48px
      line-height normal
      font-weight bold
      color #202020
      padding-bottom 20px
      text-align center

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px
        padding 20px 0 15px 0

    .title
      font-size 48px
      line-height normal
      font-weight bold
      color #202020
      padding-bottom 20px
      text-align center

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px
        padding 20px 0 15px 0

    .description
      font-size 18px
      line-height 1.67
      color #848484
      padding-bottom 25px
      text-align left
      text-align center

      @media (max-width 768px)
        font-size 14px
        padding-bottom 0

      @media (max-width 640px)
        text-align center
        font-size 12px
        padding-bottom 30px

    .howToSalesIncreaseWrap
      display flex
      flex-direction row
      padding-bottom 25px

      @media (max-width 768px)
        padding 0

      @media (max-width 640px)
        flex-direction column

      .howToSalesIncreaseBox
        padding 15px
        border-radius 10px 10px 0 0
        display flex
        width 100%
        max-width 600px
        flex-direction column

        @media (max-width 640px)
          padding 0

        .description
          text-align left

        a
          padding-left 0

    .pT-40
      @media (max-width 640px)
        padding-top 0

    img
      width 100%
      padding-bottom 30px

    .boxTitle
      font-size 24px
      color $clear-blue
      line-height normal
      font-weight bold

      @media (max-width 768px)
        font-size 18px

      i
        margin-right 7px

      a
        color $clear-blue

    .subTitle
      font-size 42px
      font-weight 500
      color #202020
      line-height normal
      text-align left
      padding 12px 0 20px 0

      @media (max-width 768px)
        font-size 38px
        padding 24px 0 10px 0

      @media (max-width 640px)
        font-size 22px
        padding 20px 0 15px 0

  .flex-row
    flex-direction row

    @media (max-width 640px)
      flex-direction column !important
