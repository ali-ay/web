.certificates

  .certificatesHeader
    display flex
    flex-direction column
    align-items center
    padding-top 85px

    @media (max-width 768px)
      padding-top 65px

    @media (max-width 640px)
      padding-top 35px

    .title
      font-size 48px
      font-weight bold
      color #202020
      line-height normal
      padding-bottom 30px

      @media (max-width 768px)
        font-size 38px

      @media (max-width 640px)
        font-size 24px
        line-height 29px

  .description
    font-size 18px
    line-height 1.67
    color #848484
    text-align center
    max-width 970px

    @media (max-width 768px)
      font-size 14px

    @media (max-width 640px)
      font-size 12px
      padding 0 20px

  .container
    display flex
    align-items center
    justify-content center
    flex-direction column
    padding 30px 0 60px 0

    @media (max-width 768px)
      padding 30px 0 40px 0

    @media (max-width 640px)
      padding 20px

    .certificatesBox
      display flex
      padding-bottom 40px
      width 100%

      @media (max-width 640px)
        flex-direction column
        padding-bottom 5px

      .image
        display flex
        justify-content center
        align-items center
        flex 1
        background-color #fff
        box-shadow 0 10px 25px 0 rgba(0, 0, 0, 0.1)
        height 245px
        border-radius 10px
        margin-right 30px

        @media (max-width 768px)
          height 200px

        @media (max-width 640px)
          margin 15px 0
          height 145px

      .content
        display flex
        flex 2
        flex-direction column
        justify-content flex-start

        .title
          font-size 42px
          font-weight 300
          color #202020
          line-height normal
          padding-bottom 30px

          @media (max-width 768px)
            font-size 32px
            padding-bottom 20px

          @media (max-width 640px)
            font-size 18px
            font-weight 500
            padding-bottom 15px

        .button
          i
            @media (max-width 640px)
              margin-left 10px

        .description
          text-align left
          padding-bottom 45px

          @media (max-width 768px)
            padding-bottom 20px

          @media (max-width 640px)
            padding 0 0 5px 0

        .button
          margin-left -15px
