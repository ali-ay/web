.newAdress
  padding 120px 0

  @media(max-width 767px)
    padding 72px 0

  .iyzi-container
    padding 0 15px
    display flex
    flex-direction column
    align-items center

    @media(max-width 1023px)
      padding 0 48px

    @media(max-width 767px)
      padding 0 16px

    .title
      font-size 40px
      line-height normal
      color #ffffff
      width 100%
      text-align left

      @media(max-width 767px)
        font-size 28px

    .content
      display flex
      padding-top 24px
      width 100%

      @media(max-width 1023px)
        flex-direction column

      @media(max-width 767px)
        padding-top 16px

      ul
        list-style none
        padding 0
        margin 0

        li
          padding 16px 0
          display flex
          align-items center

          i
            margin-right 32px

            @media(max-width 767px)
              margin-right 16px
              zoom 0.7
              min-width 56px

          .icon--icn-phone
            margin-top -54px

            @media(max-width 767px)
              margin-top -134px

          span
            font-size 24px
            color #ffffff
            line-height normal
            max-width 482px

            @media(max-width 767px)
              font-size 16px
              line-height 25px

            a
              color #ffffff

              &:hover
                color #ffffff

            strong
              font-weight 500

            .workingHours
              font-size 16px
              line-height 25px
              padding-top 8px

      .col7
        display flex
        flex-grow 7
        padding-right 15px

        @media(max-width 767px)
          padding-right 0

      .col5
        display flex
        flex-grow 7
        padding-left 15px

        @media(max-width 1023px)
          padding-left 0

        li
          @media(max-width 767px)
            padding 8px 0

