.personalPwiShoplist
  background-color #f5f9ff
  margin 80px 0

  @media(max-width 767px)
    margin 56px 0

  .iyzi-container
    display flex
    justify-content space-between
    padding 96px 26px
    flex-wrap wrap

    @media(max-width 1032px)
      flex-direction column
      align-items center
      padding 72px 0

    @media(max-width 767px)
      padding 44px 16px

    .content
      display flex
      flex-direction column
      max-width 606px
      order 1

      @media(max-width 1032px)
        max-width 672px
        padding 0 5px

      h2
        font-size 48px
        color $gray-900
        line-height 1.4
        font-weight bold

        @media(max-width 1032px)
          text-align center

        @media(max-width 767px)
          font-size 28px
          line-height normal

        span
          display inline-flex
          color $clear-blue

          @media(max-width 767px)
            display block

      p
        font-size 24px
        color $gray-900
        line-height normal
        padding 16px 0 40px 0

        @media(max-width 1032px)
          text-align center

        @media(max-width 767px)
          font-size 16px
          line-height 1.56
          padding 16px 0 32px 0


    .button
      width 100%
      max-width 270px
      justify-content center
      order 3
      margin-top -57px
      max-height 56px

      @media(max-width 1032px)
        margin-top 40px
        max-width 288px

      @media(max-width 767px)
        margin-top 32px

    .brandLogo
      display flex
      flex-wrap wrap
      justify-content space-between
      align-content space-between
      width 375px
      height 375px
      min-width 375px
      order 2

      @media(max-width 1032px)
        width 460px
        height 460px
        min-width 460px

      @media(max-width 767px)
        width 257px
        height 257px
        min-width 257px

      a
        display block
        border-radius 14px
        overflow hidden
        border 1px solid #dee2e6
        background-color #ffffff

      img
        width 103px
        height 103px

        @media(max-width 1032px)
          width 118px
          height 118px

        @media(max-width 767px)
          width 73px
          height 73px
