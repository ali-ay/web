.secreenMenu
  .slick-dots
    flex-direction row

.pwiCarousel
  position relative

  &--boxes
    padding-top 0
    margin-top -50px
    display none

    @media(max-width 767px)
      padding-top 0
      display block

    &__item
      display block
      width 330px
      max-width 330px
      min-height 430px
      border-radius 10px
      margin-top 50px
      margin-left 15px
      margin-right 15px
      cursor pointer

      &__photo
        min-height 200px
        max-height 350px
        border-radius 10px
        border-bottom-left-radius 0
        border-bottom-right-radius 0
        display flex
        justify-content center
        align-items center

        & > img
          max-height 400px

      &__logo
        margin-left 30px

      &__content
        min-height 96px
        margin 10px

        & > p
          font-size 12px
          line-height 1.5
          letter-spacing 1px
          color #4d4d4d

          @media(min-width 992px)
            font-size 16px

        & > .title
          font-size 18px
          font-weight 600
          color #202020


