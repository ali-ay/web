  .referencessBrands
    margin-bottom 100px

  .container
    .pwiApp
      display flex
      flex-direction column
      align-items center
      margin 0px auto
      max-width 800px
      padding 100px 0 0 0

      @media(max-width 640px)
        padding 44px 0 0 0

      h2
        font-weight 600
        text-align center

        span
          font-weight normal
          display block

      p
        text-align center
        padding 24px 0 48px 0

      .contentImage
        padding 0 15px
        @media(max-width 767px)
          display none

        .image
          display flex
          flex 4
          position relative
          height 100%

          img
            opacity 0
            visibility hidden
            transition all 0.2s linear
            position absolute
            top 0
            left 0

          img.active
            opacity 1
            visibility visible

        .screenSelect
          display flex
          flex 5
          align-self flex-start

          ul
            padding 0
            list-style none
            padding-top 20px

            li.active
              &:before
                content ""
                margin 0 7px 0 -10px
                border 2px solid #1e64ff
                border-radius 3px 0 0 3px
                height auto

              .bulletWrap
                .title
                  font-weight 600

            li
              padding 24px 0
              display flex
              flex-direction row
              cursor pointer

              .bulletWrap

                .title
                  font-size 24px
                  font-weight 500

                p
                  text-align left
                  font-size 16px
                  line-height 1.4
                  padding 0

