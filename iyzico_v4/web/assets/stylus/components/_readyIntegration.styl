.readyIntegration
  display flex

  .container
    display flex
    padding 100px 0
    flex-direction column

    @media (max-width 960px)
      padding 20px 0 80px 0

    ul
      list-style none
      padding 0
      margin 0
      display flex
      justify-content center
      flex-wrap wrap

      li
        display flex
        max-width 370px
        flex-direction column
        margin 15px
        padding 40px 24px
        background-color $gray-200
        border-radius 10px

        @media(max-width 960px)
          max-width 328px
          margin 8px

        @media(max-width 767px)
          max-width 100%
          padding 24px 16px


        .containerWrap
          .title
            display flex
            flex-direction column
            font-size 28px
            font-weight 500

            @media(max-width 767px)
              font-size 24px

            strong
              color $clear-blue
              font-size 40px
              padding 8px 0 16px 0

              @media(max-width 767px)
                font-size 34px
                padding-bottom 24px

          .image
            display flex
            justify-content flex-start
            align-items center
            width 260px
            height 80px
            padding 0 0 32px 0

            @media (max-width 768px)
              padding 15px 0 30px 0

            img
              max-height 60px

          .description
            font-size 16px
            line-height 1.67
            color $gray-900
            padding-bottom 32px

            @media (max-width 768px)
              font-size 14px

        .button
          margin-top auto
          border-color $clear-blue
          color $clear-blue
          padding 16px
          min-width 180px
          justify-content center

          &:hover
            background-color $clear-blue !important
            color $gray-100

            span
              background-image url('../images/icons/basic-icn-mail-white.svg')

          &:focus
            border 1px solid $clear-blue !important

          span
            background-image url('../images/icons/basic-icn-mail.svg')
            width 24px
            height 24px
            margin-right 16px
            background-size contain

    .subDescription
      padding-top 40px
